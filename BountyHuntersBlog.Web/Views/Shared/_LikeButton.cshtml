@model BountyHuntersBlog.ViewModels.LikeButtonViewModel
@{
    var formId = $"like-{Model.TargetType.ToString().ToLower()}-{Model.TargetId}";
    var action = Model.TargetType == BountyHuntersBlog.ViewModels.LikeTargetType.Mission
        ? Url.Action("ToggleMission", "Likes", new { id = Model.TargetId })
        : Url.Action("ToggleComment", "Likes", new { id = Model.TargetId });
}
<form id="@formId" method="post" action="@action" class="d-inline">
    @Html.AntiForgeryToken()
    <button type="submit"
            class="btn btn-sm @(Model.IsLikedByCurrentUser ? "btn-primary" : "btn-outline-primary")"
            data-like-btn
            data-target="@Model.TargetType"
            data-id="@Model.TargetId"
            @(Model.IsAuthenticated ? "" : "disabled")
            title="@(Model.IsAuthenticated ? "Like/Unlike" : "Login required")">
        <span class="me-1" data-like-icon>
            @(Model.IsLikedByCurrentUser ? "♥" : "♡")
        </span>
        <span data-like-count>@Model.TotalCount</span>
    </button>
</form>