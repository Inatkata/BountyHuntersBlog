@inject Microsoft.AspNetCore.Antiforgery.IAntiforgery Xsrf
<meta name="request-verification-token" content="@Xsrf.GetAndStoreTokens(Context).RequestToken" />
<script>
    const token = document.querySelector('meta[name="request-verification-token"]')?.content;
    if (token) {
      (function(open){
        XMLHttpRequest.prototype.open = function() {
          this.addEventListener('readystatechange', function(){
            if (this.readyState === 1) this.setRequestHeader('RequestVerificationToken', token);
          });
          open.apply(this, arguments);
        };
      })(XMLHttpRequest.prototype.open);
    }
</script>

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Bounty Hunters Blog</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
</head>
<body>
    <header>
        <nav class="navbar navbar-expand-lg navbar-dark bg-dark">
            <div class="container">
                <a class="navbar-brand" asp-controller="Home" asp-action="Index">Bounty Hunters</a>
                <div class="collapse navbar-collapse">
                    <ul class="navbar-nav me-auto">
                        <li class="nav-item">
                            <a class="nav-link" asp-controller="Missions" asp-action="Index">Missions</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" asp-controller="Categories" asp-action="Index">Categories</a>
                        </li>
                    </ul>
                    <ul class="navbar-nav">
                        @if (User.Identity?.IsAuthenticated ?? false)
                        {
                            <li class="nav-item">
                                <a class="nav-link" asp-controller="Account" asp-action="Logout">Logout</a>
                            </li>
                        }
                        else
                        {
                            <li class="nav-item">
                                <a class="nav-link" asp-controller="Account" asp-action="Login">Login</a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link" asp-controller="Account" asp-action="Register">Register</a>
                            </li>
                        }
                    </ul>
                </div>
            </div>
        </nav>
    </header>
    <div class="container mt-4">
        @RenderBody()
    </div>
    <footer class="border-top footer text-muted mt-5">
        <div class="container">&copy; @DateTime.Now.Year - Bounty Hunters Blog</div>
    </footer>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
<partial name="_LoginPartial" />
@RenderSection("Scripts", required: false)

</body>
</html>
