@model BountyHuntersBlog.ViewModels.Shared.PaginationViewModel
@if (Model.TotalPages > 1)
{
    <nav aria-label="Pagination">
        <ul class="pagination justify-content-center mt-4">
            <li class="page-item @(Model.Page <= 1 ? "disabled" : "")">
                <a class="page-link" href="@(Model.BuildUrl(Model.Page - 1))" aria-label="Previous">
                    <span aria-hidden="true">&laquo;</span>
                </a>
            </li>

            @for (var p = 1; p <= Model.TotalPages; p++)
            {
                <li class="page-item @(p == Model.Page ? "active" : "")">
                    <a class="page-link" href="@(Model.BuildUrl(p))">@p</a>
                </li>
            }

            <li class="page-item @(Model.Page >= Model.TotalPages ? "disabled" : "")">
                <a class="page-link" href="@(Model.BuildUrl(Model.Page + 1))" aria-label="Next">
                    <span aria-hidden="true">&raquo;</span>
                </a>
            </li>
        </ul>
    </nav>
}