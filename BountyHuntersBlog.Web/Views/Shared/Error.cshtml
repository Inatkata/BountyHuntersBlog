@model BountyHuntersBlog.Web.Models.ErrorViewModel
@{
    ViewData["Title"] = "Error";
}
<div class="container py-5">
    <div class="row justify-content-center">
        <div class="col-md-8">
            <div class="card shadow-sm border-0">
                <div class="card-body text-center p-5">
                    <h1 class="display-5 mb-3">Oops! Something went wrong.</h1>
                    <p class="text-muted">An unexpected error has occurred. Please try again later.</p>
                    @if (Model?.RequestId != null)
                    {
                        <p class="text-muted"><strong>Request ID:</strong> @Model.RequestId</p>
                    }
                    <div class="d-flex justify-content-center gap-2 mt-3">
                        <a asp-controller="Home" asp-action="Index" class="btn btn-primary">Back to Home</a>
                        <a href="javascript:location.reload()" class="btn btn-outline-secondary">Reload</a>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
