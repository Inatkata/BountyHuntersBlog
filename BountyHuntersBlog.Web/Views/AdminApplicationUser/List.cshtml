@model BountyHuntersBlog.Models.ViewModels.AdminApplicationUserListViewModel

@{
    ViewData["Title"] = "Manage Users";
}

<div class="container py-4">
    <h1>Manage Users</h1>

    <form asp-action="List" method="post">
        <input type="hidden" asp-for="CreateApplicationUser.Id" />

        <div class="mb-3">
            <label class="form-label">Username</label>
            <input type="text" asp-for="CreateApplicationUser.Username" class="form-control" />
            <span asp-validation-for="CreateApplicationUser.Username" class="text-danger"></span>
        </div>

        <div class="mb-3">
            <label class="form-label">Email</label>
            <input type="email" asp-for="CreateApplicationUser.Email" class="form-control" />
            <span asp-validation-for="CreateApplicationUser.Email" class="text-danger"></span>
        </div>

        <div class="mb-3">
            <label class="form-label">Password</label>
            <input type="password" asp-for="CreateApplicationUser.Password" class="form-control" />
            <span asp-validation-for="CreateApplicationUser.Password" class="text-danger"></span>
        </div>

        <div class="form-check mb-3">
            <input type="checkbox" asp-for="CreateApplicationUser.IsAdmin" class="form-check-input" />
            <label asp-for="CreateApplicationUser.IsAdmin" class="form-check-label">Admin</label>
        </div>

        <button type="submit" class="btn btn-primary">Create User</button>
    </form>

    <hr />

    <table class="table table-bordered table-striped mt-4">
        <thead>
            <tr>
                <th>Username</th>
                <th>Email</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var user in Model.ApplicationUsers)
            {
                <tr>
                    <td>@user.UserName</td>
                    <td>@user.Email</td>
                    <td>
                        <a asp-action="Edit" asp-route-id="@user.Id" class="btn btn-sm btn-warning">Edit</a>
                        <form asp-action="Delete" asp-route-id="@user.Id" method="post" class="d-inline">
                            <button type="submit" class="btn btn-sm btn-danger">Delete</button>
                        </form>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>
