@model IEnumerable<BountyHuntersBlog.ViewModels.CommentViewModel>

@{
    ViewData["Title"] = "Comments";
}

<h2>All Comments</h2>

<table class="table table-striped">
    <thead>
    <tr>
        <th>Content</th>
        <th>User</th>
        <th>Mission</th>
        <th>Created On</th>
        <th></th>
    </tr>
    </thead>
    <tbody>
    @foreach (var comment in Model)
    {
        <tr>
            <td>@comment.Content</td>
            <td>@comment.UserName</td>
            <td>@comment.MissionTitle</td>
            <td>@comment.CreatedOn.ToString("g")</td>
            <td>
                <a asp-action="Details" asp-route-id="@comment.Id" class="btn btn-info btn-sm">Details</a>
                <a asp-action="Edit" asp-route-id="@comment.Id" class="btn btn-warning btn-sm">Edit</a>
                <a asp-action="Delete" asp-route-id="@comment.Id" class="btn btn-danger btn-sm">Delete</a>
            </td>
        </tr>
    }
    </tbody>
</table>