@model BountyHuntersBlog.ViewModels.CommentViewModel

@{
    ViewData["Title"] = "Comment Details";
}

<h2>Comment Details</h2>

<div>
    <p><strong>Content:</strong> @Model.Content</p>
    <p><strong>Author:</strong> @Model.AuthorName</p>
    <p><strong>Mission:</strong> @Model.MissionTitle</p>
    <p><strong>Created On:</strong> @Model.CreatedOn.ToString("g")</p>
</div>

<a asp-action="Edit" asp-route-id="@Model.Id" class="btn btn-warning">Edit</a>
<a asp-action="Index" class="btn btn-secondary">Back to List</a>