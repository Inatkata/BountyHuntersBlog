@model BountyHuntersBlog.ViewModels.Comments.CommentViewModel
<h2>Edit Comment</h2>
<form method="post">
    @Html.AntiForgeryToken()
    <input type="hidden" asp-for="Id" />
    <input type="hidden" asp-for="MissionId" />
    <div class="mb-3">
        <textarea asp-for="Content" class="form-control" rows="4"></textarea>
        <span asp-validation-for="Content" class="text-danger"></span>
    </div>
    <button class="btn btn-primary" type="submit">Save</button>
    <a class="btn btn-secondary" asp-controller="Missions" asp-action="Details" asp-route-id="@Model.MissionId">Back</a>
</form>
@section Scripts { <partial name="_ValidationScriptsPartial" /> }