@model BountyHuntersBlog.ViewModels.Category.CategoryViewModel

<h2>@Model.Name</h2>
@if (Model.Missions != null && Model.Missions.Any())
{
    <ul class="list-group">
        @foreach (var m in Model.Missions)
        {
            <li class="list-group-item">
                <a asp-controller="Missions" asp-action="Details" asp-route-id="@m.Id">@m.Title</a>
            </li>
        }
    </ul>
}
else
{
    <div class="text-muted">No missions in this category.</div>
}