@model IEnumerable<BountyHuntersBlog.ViewModels.CategoryViewModel>
@{
    ViewData["Title"] = "Categories";
}

<h2>Categories</h2>
<p><a asp-action="Create" class="btn btn-primary">Create</a></p>

<table class="table table-striped">
    <thead>
        <tr>
            <th>Name</th>
            <th>Missions</th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var c in Model)
        {
            <tr>
                <td>@c.Name</td>
                <td>@c.MissionsCount</td>
                <td class="text-end">
                    <a asp-action="Details" asp-route-id="@c.Id" class="btn btn-sm btn-info">Details</a>
                    <a asp-action="Edit" asp-route-id="@c.Id" class="btn btn-sm btn-warning">Edit</a>
                    <a asp-action="Delete" asp-route-id="@c.Id" class="btn btn-sm btn-danger">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>