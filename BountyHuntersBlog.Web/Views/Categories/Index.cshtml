@model IEnumerable<BountyHuntersBlog.ViewModels.CategoryViewModel>

@{
    ViewData["Title"] = "Categories";
}

<div class="d-flex justify-content-between align-items-center mb-3" style="margin-top:20px;">
    <h2>@ViewData["Title"]</h2>

    @if (User?.Identity?.IsAuthenticated == true)
    {
        <a asp-controller="Categories" asp-action="Create" class="btn btn-primary">
            <i class="fas fa-plus"></i> Create Category
        </a>
    }
</div>
<hr />

@if (Model == null || !Model.Any())
{
    <div class="text-center mt-5">
        <h4>No categories yet.</h4>
        <p class="text-muted">Add one to organize your missions.</p>
    </div>
}
else
{
    <div class="row g-4">
        @foreach (var c in Model)
        {
            <div class="col-12 col-sm-6 col-md-4 col-lg-3">
                <div class="card h-100 bg-dark text-white border-0 shadow-sm">
                    <div class="d-flex align-items-center justify-content-center" style="height:140px;">
                        <i class="fa-solid fa-layer-group fa-3x text-secondary"></i>
                    </div>
                    <div class="card-body d-flex flex-column">
                        <h5 class="card-title text-truncate" title="@c.Name">@c.Name</h5>

                        <div class="mt-auto d-flex gap-2">
                            <a asp-controller="Missions" asp-action="Index" asp-route-categoryId="@c.Id"
                               class="btn btn-info flex-fill">
                                <i class="fas fa-crosshairs"></i> View Missions
                            </a>

                            @if (User?.Identity?.IsAuthenticated == true)
                            {
                                <a asp-controller="Categories" asp-action="Edit" asp-route-id="@c.Id"
                                   class="btn btn-primary flex-fill">
                                    <i class="fas fa-edit"></i> Edit
                                </a>
                            }
                        </div>
                    </div>
                </div>
            </div>
        }
    </div>
}
