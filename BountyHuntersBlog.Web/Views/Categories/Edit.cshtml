@model BountyHuntersBlog.ViewModels.CategoryViewModel
@{
    ViewData["Title"] = "Edit Category";
}
<div class="d-flex justify-content-between align-items-center mb-3" style="margin-top:20px;">
    <h2>@ViewData["Title"]</h2>
</div>
<hr />
<div class="row">
    <div class="col-sm-12 offset-lg-2 col-lg-8 offset-xl-3 col-xl-6">
        <form asp-controller="Categories" asp-action="Edit" method="post">
            @Html.AntiForgeryToken()
            <input type="hidden" asp-for="Id" />
            <div class="mb-3">
                <label asp-for="Name" class="form-label-add-edit">Category Name</label>
                <input asp-for="Name" class="form-control" />
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>
            <div class="mb-3 d-flex gap-2">
                <button class="btn btn-primary w-100 fw-bold rounded" type="submit">
                    <i class="fas fa-save"></i> Update
                </button>
                <a asp-controller="Categories" asp-action="Index" class="btn btn-secondary w-100 fw-bold rounded">
                    <i class="fas fa-arrow-left"></i> Back
                </a>
            </div>
        </form>
    </div>
</div>