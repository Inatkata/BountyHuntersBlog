@* Views/Account/Register.cshtml *@
@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers
@model BountyHuntersBlog.ViewModels.Account.RegisterViewModel
@{
    ViewData["Title"] = "Register";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<div class="row justify-content-center">
    <div class="col-md-6 col-lg-5">
        <h2 class="mb-3 text-center">Register</h2>
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>

        <form asp-controller="Account" asp-action="Register" method="post" class="card shadow-sm p-4">
            @Html.AntiForgeryToken()

            <div class="mb-3">
                <label asp-for="Username" class="form-label"></label>
                <input asp-for="Username" class="form-control" autocomplete="username" />
                <span asp-validation-for="Username" class="text-danger"></span>
            </div>

            <div class="mb-3">
                <label asp-for="Password" class="form-label"></label>
                <input asp-for="Password" class="form-control" autocomplete="new-password" />
                <span asp-validation-for="Password" class="text-danger"></span>
            </div>

            <div class="mb-3">
                <label asp-for="ConfirmPassword" class="form-label"></label>
                <input asp-for="ConfirmPassword" class="form-control" autocomplete="new-password" />
                <span asp-validation-for="ConfirmPassword" class="text-danger"></span>
            </div>

            <button type="submit" class="btn btn-success w-100">Create account</button>

            <div class="text-center mt-3">
                <span class="text-muted">Already have an account?</span>
                <a asp-controller="Account" asp-action="Login">Login</a>
            </div>
        </form>
    </div>
</div>

@section Scripts { <partial name="~/Views/Shared/_ValidationScriptsPartial.cshtml" /> }