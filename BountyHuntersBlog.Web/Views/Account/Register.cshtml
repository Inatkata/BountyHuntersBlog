@model BountyHuntersBlog.ViewModels.Auth.RegisterVM
<h2>Register</h2>
<form asp-action="Register" method="post">
    <div class="mb-3"><label>User</label><input asp-for="UserName" class="form-control" /></div>
    <div class="mb-3"><label>Email</label><input asp-for="Email" class="form-control" /></div>
    <div class="mb-3"><label>Password</label><input asp-for="Password" class="form-control" /></div>
    <div class="mb-3"><label>Confirm</label><input asp-for="ConfirmPassword" class="form-control" /></div>
    <button class="btn btn-primary">Create</button>
    <a asp-controller="Home" asp-action="Index" class="btn btn-link">Back</a>
</form>