@{
    ViewData["Title"] = "Access Denied";
}
<h2>Access Denied</h2>
<div class="alert alert-danger mt-3">
    You don’t have permission to view this page.
</div>
<p class="mt-3">
    <a asp-area="" asp-controller="Home" asp-action="Index" class="btn btn-secondary">Go Home</a>
    @if (!(User?.Identity?.IsAuthenticated ?? false))
    {
        <a asp-area="" asp-controller="Account" asp-action="Login" class="btn btn-primary ms-2">Login</a>
    }
</p>