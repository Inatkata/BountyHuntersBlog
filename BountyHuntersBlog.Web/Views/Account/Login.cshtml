@model BountyHuntersBlog.ViewModels.Account.LoginViewModel
@{
    ViewData["Title"] = "Login";
}

<h2 class="mt-3">Login</h2>

<form asp-action="Login" method="post" class="mt-3">
    @Html.AntiForgeryToken()
    <input type="hidden" asp-for="ReturnUrl" />

    <div asp-validation-summary="ModelOnly" class="text-danger"></div>

    <div class="mb-3">
        <label asp-for="UserNameOrEmail" class="form-label"></label>
        <input asp-for="UserNameOrEmail" class="form-control" />
        <span asp-validation-for="UserNameOrEmail" class="text-danger"></span>
    </div>

    <div class="mb-3">
        <label asp-for="Password" class="form-label"></label>
        <input asp-for="Password" class="form-control" />
        <span asp-validation-for="Password" class="text-danger"></span>
    </div>

    <div class="form-check mb-3">
        <input class="form-check-input" asp-for="RememberMe" />
        <label class="form-check-label" asp-for="RememberMe"></label>
    </div>

    <button type="submit" class="btn btn-primary">Sign in</button>
    <a asp-controller="Account" asp-action="Register" class="btn btn-link">Register</a>
</form>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}