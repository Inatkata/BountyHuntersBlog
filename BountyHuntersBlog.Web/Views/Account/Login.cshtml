@model BountyHuntersBlog.ViewModels.Account.LoginViewModel
@{
    ViewData["Title"] = "Log in";
}
<div class="row justify-content-center" style="margin-top:20px;">
    <div class="col-md-6 col-lg-5">
        <div class="card bg-dark text-white border-0 shadow-sm">
            <div class="card-body p-4">
                <h2 class="mb-3">@ViewData["Title"]</h2>
                <hr />
                <form asp-controller="Account" asp-action="Login" method="post">
                    @Html.AntiForgeryToken()
                    <div asp-validation-summary="ModelOnly" class="text-danger" role="alert"></div>

                    <div class="form-floating mb-3">
                        <input asp-for="Email" class="form-control" autocomplete="username" placeholder="name@example.com" />
                        <label asp-for="Email"></label>
                        <span asp-validation-for="Email" class="text-danger"></span>
                    </div>

                    <div class="form-floating mb-3">
                        <input asp-for="Password" class="form-control" autocomplete="current-password" placeholder="password" />
                        <label asp-for="Password"></label>
                        <span asp-validation-for="Password" class="text-danger"></span>
                    </div>

                    <input type="hidden" asp-for="ReturnUrl" />
                    <button type="submit" class="w-100 btn btn-lg btn-primary">Log in</button>
                </form>
            </div>
        </div>
        <div class="text-center mt-3">
            <a asp-controller="Account" asp-action="Register" asp-route-returnUrl="@Model?.ReturnUrl" class="btn btn-outline-info">
                <i class="fa-solid fa-user-plus me-1"></i> Create account
            </a>
        </div>
    </div>
</div>

@section Scripts { <partial name="_ValidationScriptsPartial" /> }