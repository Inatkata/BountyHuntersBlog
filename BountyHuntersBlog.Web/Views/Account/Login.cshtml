@* Views/Account/Login.cshtml *@
@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers
@model BountyHuntersBlog.ViewModels.Account.LoginViewModel
@{
    ViewData["Title"] = "Login";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<div class="row justify-content-center">
    <div class="col-md-6 col-lg-5">
        <h2 class="mb-3 text-center">Login</h2>
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>

        <form asp-controller="Account" asp-action="Login" method="post" class="card shadow-sm p-4">
            @Html.AntiForgeryToken()

            <div class="mb-3">
                <label asp-for="Username" class="form-label"></label>
                <input asp-for="Username" class="form-control" autocomplete="username" />
                <span asp-validation-for="Username" class="text-danger"></span>
            </div>

            <div class="mb-3">
                <label asp-for="Password" class="form-label"></label>
                <input asp-for="Password" class="form-control" autocomplete="current-password" />
                <span asp-validation-for="Password" class="text-danger"></span>
            </div>

            <div class="form-check mb-3">
                <input asp-for="RememberMe" class="form-check-input" />
                <label asp-for="RememberMe" class="form-check-label"></label>
            </div>

            <button type="submit" class="btn btn-primary w-100">Sign in</button>

            <div class="text-center mt-3">
                <span class="text-muted">No account?</span>
                <a asp-controller="Account" asp-action="Register">Register</a>
            </div>
        </form>
    </div>
</div>

@section Scripts { <partial name="~/Views/Shared/_ValidationScriptsPartial.cshtml" /> }