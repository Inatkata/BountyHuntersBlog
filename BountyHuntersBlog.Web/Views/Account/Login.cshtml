@model BountyHuntersBlog.ViewModels.Account.LoginViewModel
@{
    ViewData["Title"] = "Login";
}
<h2 class="mb-3">Login</h2>

<form method="post">
    <div class="mb-3">
        <label asp-for="UserName" class="form-label"></label>
        <input asp-for="UserName" class="form-control" autocomplete="username" />
        <span asp-validation-for="UserName" class="text-danger"></span>
    </div>

    <div class="mb-3">
        <label asp-for="Password" class="form-label"></label>
        <input asp-for="Password" class="form-control" autocomplete="current-password" />
        <span asp-validation-for="Password" class="text-danger"></span>
    </div>

    <div class="form-check mb-3">
        <input asp-for="RememberMe" class="form-check-input" />
        <label asp-for="RememberMe" class="form-check-label"></label>
    </div>

    <button class="btn btn-primary">Login</button>
    <a asp-action="Register" class="btn btn-outline-secondary ms-2">Register</a>

    <input type="hidden" asp-for="ReturnUrl" />
    @Html.AntiForgeryToken()
</form>

@section Scripts { <partial name="_ValidationScriptsPartial" /> }