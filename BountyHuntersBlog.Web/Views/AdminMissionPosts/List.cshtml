@model IEnumerable<BountyHuntersBlog.Models.Domain.MissionPost>

@{
    ViewData["Title"] = "All Missions";
}

<h2 class="mt-3">All Mission Posts</h2>

<a asp-controller="AdminMissionPosts" asp-action="Add" class="btn btn-primary mb-3">Add New Mission</a>

<table class="table table-bordered">
    <thead>
    <tr>
        <th>Title</th>
        <th>Author</th>
        <th>Date</th>
        <th>Visible</th>
        <th>Actions</th>
    </tr>
    </thead>
    <tbody>
    @foreach (var post in Model)
    {
        <tr>
            <td>@post.Title</td>
            <td>@post.Author?.UserName</td>
            <td>@post.MissionDate.ToShortDateString()</td>
            <td>@post.Visible</td>
            <td>
                <a asp-action="Edit" asp-route-id="@post.Id" class="btn btn-sm btn-warning">Edit</a>
                <form asp-action="Delete" asp-route-id="@post.Id" method="post" class="d-inline">
                    <button type="submit" class="btn btn-sm btn-danger" onclick="return confirm('Are you sure?')">Delete</button>
                </form>
            </td>
        </tr>
    }
    </tbody>
</table>