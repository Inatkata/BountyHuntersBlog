@model IEnumerable<BountyHuntersBlog.Models.Domain.MissionPost>

@{
    ViewData["Title"] = "All Missions";
}

<div class="bg-secondary bg-opacity-10 py-2">
    <div class="container">
        <h1>All Missions - Admin Functionality</h1>
    </div>
</div>

<div class="container mt-4">
    <div class="mb-3 d-flex justify-content-end">
        <a asp-action="Add" class="btn btn-primary">Add New Mission</a>
    </div>

    @if (Model != null && Model.Any())
    {
        <table class="table table-striped">
            <thead>
            <tr>
                <th>Title</th>
                <th>Date</th>
                <th>Status</th>
                <th>Visible</th>
                <th>Actions</th>
            </tr>
            </thead>
            <tbody>
            @foreach (var mission in Model)
            {
                <tr>
                    <td>@mission.Title</td>
                    <td>@mission.MissionDate.ToShortDateString()</td>
                    <td>@mission.Status</td>
                    <td>@mission.Visible</td>
                    <td>
                        <a class="btn btn-sm btn-secondary" 
                           asp-action="Edit" 
                           asp-route-id="@mission.Id">Edit</a>

                        <form asp-action="Delete" method="post" style="display:inline;">
                            <input type="hidden" name="id" value="@mission.Id" />
                            <button type="submit" class="btn btn-sm btn-danger">Delete</button>
                        </form>
                    </td>
                </tr>
            }
            </tbody>
        </table>
    }
    else
    {
        <p>No missions found.</p>
    }
</div>