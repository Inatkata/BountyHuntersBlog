@model BountyHuntersBlog.Models.ViewModels.AddMissionPostRequest

@{
    ViewData["Title"] = "Edit Mission";
    var postId = ViewBag.PostId;
}

<h2 class="mt-3">Edit Mission</h2>

<form method="post" asp-action="Edit" asp-route-id="@postId">
    <input type="hidden" asp-for="AuthorId" />

    <div class="mb-3">
        <label class="form-label">Title</label>
        <input asp-for="Title" class="form-control" />
    </div>

    <div class="mb-3">
        <label class="form-label">Content</label>
        <textarea asp-for="Content" class="form-control"></textarea>
    </div>
    <div class="mb-3">
        <label class="form-label">Short Description</label>
        <textarea asp-for="ShortDescription" class="form-control"></textarea>
    </div>

    <div class="mb-3">
        <label class="form-label">Featured Image URL</label>
        <input asp-for="FeaturedImageUrl" class="form-control" />
    </div>

    <div class="mb-3">
        <label class="form-label">URL Handle</label>
        <input asp-for="UrlHandle" class="form-control" />
    </div>

    <div class="mb-3">
        <label class="form-label">Mission Date</label>
        <input asp-for="MissionDate" type="date" class="form-control" />
    </div>

    <div class="form-check mb-3">
        <input class="form-check-input" type="checkbox" asp-for="Visible" />
        <label class="form-check-label">Visible</label>
    </div>

    <div class="mb-3">
        <label class="form-label">Factions</label>
        <select asp-for="SelectedFactions" asp-items="ViewBag.Factions" class="form-select" multiple></select>
    </div>

    <button type="submit" class="btn btn-success">Save Changes</button>
</form>