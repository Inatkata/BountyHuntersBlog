@using BountyHuntersBlog.Models.Requests
@model EditMissionPostRequest

@{
    ViewData["Title"] = "Edit Mission";
}

<h1 class="mt-3 mb-4">Edit Mission</h1>

<form method="post" enctype="multipart/form-data">
    <input type="hidden" asp-for="Id" />
    <input type="hidden" asp-for="AuthorId" />

    <div class="mb-3">
        <label asp-for="FeaturedImageUrl" class="form-label"></label>
        <input asp-for="FeaturedImageUrl" class="form-control" />
    </div>

    <div class="mb-3">
        <label asp-for="UrlHandle" class="form-label"></label>
        <input asp-for="UrlHandle" class="form-control" />
    </div>

    <div class="mb-3">
        <label asp-for="Title" class="form-label"></label>
        <input asp-for="Title" class="form-control" />
    </div>

    <div class="mb-3">
        <label asp-for="ShortDescription" class="form-label"></label>
        <input asp-for="ShortDescription" class="form-control" />
    </div>

    <div class="mb-3">
        <label asp-for="Content" class="form-label"></label>
        <textarea asp-for="Content" rows="6" class="form-control"></textarea>
    </div>

    <div class="mb-3">
        <label asp-for="MissionDate" class="form-label"></label>
        <input asp-for="MissionDate" type="date" class="form-control" />
    </div>

    <div class="form-check mb-3">
        <input class="form-check-input" asp-for="Visible" />
        <label class="form-check-label" asp-for="Visible">Visible</label>
    </div>

    <div class="mb-3">
        <label class="form-label">Select Factions</label>
        <select asp-for="SelectedFactions" asp-items="Model.FactionList" multiple class="form-select"></select>
    </div>

    <div class="d-flex justify-content-between">
        <button type="submit" class="btn btn-primary">Save</button>
        <a asp-action="List" class="btn btn-secondary">Cancel</a>
    </div>
</form>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
