@using BountyHuntersBlog.Models.Requests
@model EditFactionRequest

@{
    ViewData["Title"] = "Edit Faction";
}

<div class="bg-secondary bg-opacity-10 py-2">
    <div class="container">
        <h1>Edit Faction</h1>
    </div>
</div>

<div class="container py-4">
    @if (Model != null)
    {
        <form method="post">
            <input type="hidden" asp-for="Id" />

            <div class="mb-3">
                <label class="form-label">Name</label>
                <input type="text" asp-for="Name" class="form-control" />
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>

            <div class="mb-3">
                <label class="form-label">Display Name</label>
                <input type="text" asp-for="DisplayName" class="form-control" />
                <span asp-validation-for="DisplayName" class="text-danger"></span>
            </div>

            <div class="d-flex">
                <button type="submit" class="btn btn-primary">Update</button>
                <button type="submit" asp-action="Delete" class="btn btn-danger ms-2">Delete</button>
            </div>
        </form>
    }
    else
    {
        <p class="text-danger">Faction not found!</p>
    }
</div>