@model IEnumerable<BountyHuntersBlog.Models.Domain.Faction>


@{
    int nextPage = Convert.ToInt32(ViewBag.PageNumber) + 1;
    int prevPage = Convert.ToInt32(ViewBag.PageNumber) - 1;
    ViewData["Title"] = "All Factions";
}

<div class="bg-secondary bg-opacity-10 py-2">
    <div class="container">
        <h1>Show All Factions - Admin Functionality</h1>
    </div>
</div>
<div class="container mt-3 d-flex justify-content-end">
    <a asp-action="Add" asp-controller="AdminFactions" class="btn btn-primary">
        Add Faction
    </a>
</div>

<form method="get"
      asp-controller="AdminFactions"
      asp-action="List">
    <div class="container mt-5">
        <div class="row">
            <div class="col col-md-3 d-flex">
                <input type="text" class="form-control"
                       name="searchQuery" value="@ViewBag.SearchQuery" />
                <button type="submit" class="btn btn-warning ms-3">Search</button>
            </div>
        </div>
    </div>
</form>

<div class="container mt-3">
    @if (Model != null && Model.Any())
    {
        <table class="table">
            <thead>
                <tr>
                    <th>Id</th>
                    <th>
                        Name
                        <span>
                            <a class="btn btn-light"
                               asp-controller="AdminFactions"
                               asp-action="List"
                               asp-route-sortBy="Name"
                               asp-route-sortDirection="Asc"
                               asp-route-searchQuery="@ViewBag.SearchQuery">
                                <i class="bi bi-arrow-up"></i>
                            </a>
                            <a class="btn btn-light"
                               asp-controller="AdminFactions"
                               asp-action="List"
                               asp-route-sortBy="Name"
                               asp-route-sortDirection="Desc"
                               asp-route-searchQuery="@ViewBag.SearchQuery">
                                <i class="bi bi-arrow-down"></i>
                            </a>
                        </span>
                    </th>
                    <th>
                        Display Name
                        <span>
                            <a class="btn btn-light"
                               asp-controller="AdminFactions"
                               asp-action="List"
                               asp-route-sortBy="DisplayName"
                               asp-route-sortDirection="Asc"
                               asp-route-searchQuery="@ViewBag.SearchQuery">
                                <i class="bi bi-arrow-up"></i>
                            </a>
                            <a class="btn btn-light"
                               asp-controller="AdminFactions"
                               asp-action="List"
                               asp-route-sortBy="DisplayName"
                               asp-route-sortDirection="Desc"
                               asp-route-searchQuery="@ViewBag.SearchQuery">
                                <i class="bi bi-arrow-down"></i>
                            </a>
                        </span>
                    </th>
                    <th></th>
                </tr>
            </thead>
            <tbody>
                @foreach (var faction in Model)
                {
                    <tr>
                        <td>@faction.Id</td>
                        <td>@faction.Name</td>
                        <td>@faction.DisplayName</td>
                        <td>
                            <a asp-area="" asp-controller="AdminFactions"
                               asp-action="Edit"
                               asp-route-id="@faction.Id">Edit</a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>

        <nav aria-label="Page navigation example">
            <ul class="pagination">
                <li class="page-item">
                    <a class="page-link"
                       asp-controller="AdminFactions"
                       asp-action="List"
                       asp-route-pageNumber="@prevPage"
                       asp-route-pageSize="@ViewBag.PageSize"
                       asp-route-sortBy="@ViewBag.SortBy"
                       asp-route-sortDirection="@ViewBag.SortDirection">
                        Previous
                    </a>
                </li>

                @for (int i = 1; i <= ViewBag.TotalPages; i++)
                {
                    <li class="page-item">
                        <a class="page-link"
                           asp-controller="AdminFactions"
                           asp-action="List"
                           asp-route-pageNumber="@i"
                           asp-route-pageSize="@ViewBag.PageSize"
                           asp-route-sortBy="@ViewBag.SortBy"
                           asp-route-sortDirection="@ViewBag.SortDirection">
                            @i
                        </a>
                    </li>
                }

                <li class="page-item">
                    <a class="page-link"
                       asp-controller="AdminFactions"
                       asp-action="List"
                       asp-route-pageNumber="@nextPage"
                       asp-route-pageSize="@ViewBag.PageSize"
                       asp-route-sortBy="@ViewBag.SortBy"
                       asp-route-sortDirection="@ViewBag.SortDirection">
                        Next
                    </a>
                </li>
            </ul>
        </nav>
    }
    else
    {
        <p>No factions found!</p>
    }
</div>
