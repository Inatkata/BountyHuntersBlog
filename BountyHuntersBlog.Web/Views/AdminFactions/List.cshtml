@model IEnumerable<BountyHuntersBlog.Models.Domain.Faction>
@{
    ViewData["Title"] = "Factions";
}

<h2 class="mt-3">Factions</h2>

<a asp-controller="AdminFaction" asp-action="Add" class="btn btn-primary mb-3">Add New Faction</a>

<table class="table table-bordered">
    <thead>
    <tr>
        <th>Name</th>
        <th>Description</th>
        <th>Actions</th>
    </tr>
    </thead>
    <tbody>
    @foreach (var faction in Model)
    {
        <tr>
            <td>@faction.Name</td>
            <td>@faction.Description</td>
            <td>
                <a asp-action="Edit" asp-route-id="@faction.Id" class="btn btn-sm btn-warning">Edit</a>
                <form asp-action="Delete" asp-route-id="@faction.Id" method="post" class="d-inline">
                    <button type="submit" class="btn btn-sm btn-danger" onclick="return confirm('Are you sure?')">Delete</button>
                </form>
            </td>
        </tr>
    }
    </tbody>
</table>