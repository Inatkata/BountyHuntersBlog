@model BountyHuntersBlog.Models.ViewModels.AdminHunterListViewModel

@{
    ViewData["Title"] = "Hunters - Admin";
}

<div class="bg-secondary bg-opacity-10 py-2">
    <div class="container">
        <h1>Hunters - Admin Panel</h1>
    </div>
</div>

<div class="container py-4">
    <div class="mb-3 d-flex justify-content-end">
        <button type="button" class="btn btn-dark" data-bs-toggle="modal" data-bs-target="#modalCreateHunter">
            Create New Hunter
        </button>
    </div>

    @if (Model != null && Model.Hunters.Any())
    {
        <table class="table table-hover">
            <thead>
                <tr>
                    <th>Id</th>
                    <th>Username</th>
                    <th>Email</th>
                    <th>Actions</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var hunter in Model.Hunters)
                {
                    <tr>
                        <td>@hunter.Id</td>
                        <td>@hunter.DisplayName</td>
                        <td>@hunter.Email</td>
                        <td>
                            <form method="post" asp-action="Delete" asp-route-id="@hunter.Id" class="d-inline">
                                <button class="btn btn-danger btn-sm" type="submit">Delete</button>
                            </form>
                            <a class="btn btn-primary btn-sm ms-1" asp-action="Edit" asp-route-id="@hunter.Id">Edit</a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    }
    else
    {
        <p>No hunters found.</p>
    }
</div>

<form method="post" asp-action="List">
    <div class="modal fade" id="modalCreateHunter" tabindex="-1" aria-labelledby="modalCreateHunterLabel" aria-hidden="true">
        <div class="modal-dialog">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title" id="modalCreateHunterLabel">Create New Hunter</h5>
                    <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
                </div>
                <div class="modal-body">

                    <div class="mb-3">
                        <label class="form-label">Username</label>
                        <input type="text" class="form-control" asp-for="CreateHunter.Hunter" />
                    </div>

                    <div class="mb-3">
                        <label class="form-label">Email</label>
                        <input type="text" class="form-control" asp-for="CreateHunter.Email" />
                    </div>

                    <div class="mb-3">
                        <label class="form-label">Password</label>
                        <input type="password" class="form-control" asp-for="CreateHunter.Password" />
                    </div>

                    <div class="form-check mb-3">
                        <input type="checkbox" class="form-check-input" asp-for="CreateHunter.IsAdmin" />
                        <label class="form-check-label" asp-for="CreateHunter.IsAdmin">Admin Role</label>
                    </div>

                </div>
                <div class="modal-footer">
                    <button type="submit" class="btn btn-primary">Create</button>
                </div>
            </div>
        </div>
    </div>
</form>
