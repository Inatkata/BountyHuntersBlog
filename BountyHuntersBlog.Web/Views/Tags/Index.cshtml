@model IEnumerable<BountyHuntersBlog.ViewModels.TagViewModel>

@{
    ViewData["Title"] = "Tags";
}

<div class="d-flex justify-content-between align-items-center mb-3" style="margin-top:20px;">
    <h2>@ViewData["Title"]</h2>

    @if (User?.Identity?.IsAuthenticated == true)
    {
        <a asp-controller="Tags" asp-action="Create" class="btn btn-primary">
            <i class="fas fa-plus"></i> Create Tag
        </a>
    }
</div>
<hr />

@if (Model == null || !Model.Any())
{
    <div class="text-center mt-5">
        <h4>No tags yet.</h4>
        <p class="text-muted">Add tags to classify missions.</p>
    </div>
}
else
{
    <div class="row g-3">
        @foreach (var t in Model)
        {
            <div class="col-12 col-sm-6 col-md-4 col-lg-3">
                <div class="card h-100 bg-dark text-white border-0 shadow-sm">
                    <div class="card-body d-flex align-items-center justify-content-between">
                        <div class="d-flex align-items-center gap-2">
                            <i class="fa-solid fa-tag text-secondary"></i>
                            <span class="fw-semibold">@t.Name</span>
                        </div>
                        <div class="d-flex gap-2">
                            <a asp-controller="Missions" asp-action="Index" asp-route-tagId="@t.Id"
                               class="btn btn-sm btn-info">
                                <i class="fas fa-crosshairs"></i>
                            </a>
                            @if (User?.Identity?.IsAuthenticated == true)
                            {
                                <a asp-controller="Tags" asp-action="Edit" asp-route-id="@t.Id"
                                   class="btn btn-sm btn-primary">
                                    <i class="fas fa-edit"></i>
                                </a>
                            }
                        </div>
                    </div>
                </div>
            </div>
        }
    </div>
}
