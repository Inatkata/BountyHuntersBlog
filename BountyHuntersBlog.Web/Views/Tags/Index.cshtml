@model IEnumerable<BountyHuntersBlog.ViewModels.TagViewModel>
@{ ViewData["Title"] = "Tags"; }

<h2>Tags</h2>
<p><a asp-action="Create" class="btn btn-primary">Create</a></p>

<table class="table table-striped">
    <thead>
    <tr>
        <th>Name</th>
        <th>Missions</th>
        <th></th>
    </tr>
    </thead>
    <tbody>
    @foreach (var t in Model)
    {
        <tr>
            <td>@t.Name</td>
            <td>@t.MissionsCount</td>
            <td class="text-end">
                <a asp-action="Details" asp-route-id="@t.Id" class="btn btn-sm btn-info">Details</a>
                <a asp-action="Edit"    asp-route-id="@t.Id" class="btn btn-sm btn-warning">Edit</a>
                <a asp-action="Delete"  asp-route-id="@t.Id" class="btn btn-sm btn-danger">Delete</a>
            </td>
        </tr>
    }
    </tbody>
</table>