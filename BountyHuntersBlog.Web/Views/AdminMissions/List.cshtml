@model List<BountyHuntersBlog.Models.Domain.MissionPost>

@{
    ViewData["Title"] = "All Missions";
}

<div class="bg-secondary bg-opacity-10 py-2 mb-3">
    <div class="container">
        <h1>All Missions - Admin</h1>
        <a class="btn btn-success" asp-controller="AdminMissions" asp-action="Add">+ Add New Mission</a>
    </div>
</div>

<div class="container py-3">
    @if (Model != null && Model.Any())
    {
        <table class="table table-bordered table-hover">
            <thead class="table-dark">
                <tr>
                    <th>Title</th>
                    <th>Factions</th>
                    <th>Visible</th>
                    <th>Date</th>
                    <th></th>
                </tr>
            </thead>
            <tbody>
                @foreach (var mission in Model)
                {
                    <tr>
                        <td>@mission.Title</td>
                        <td>
                            <div class="d-flex flex-wrap">
                                @foreach (var faction in mission.Factions)
                                {
                                    <span class="badge bg-info text-dark me-1 mb-1">@faction.DisplayName</span>
                                }
                            </div>
                        </td>
                        <td>
                            @if (mission.Visible)
                            {
                                <span class="text-success">✔</span>
                            }
                            else
                            {
                                <span class="text-danger">✘</span>
                            }
                        </td>
                        <td>@mission.MissionDate.ToShortDateString()</td>
                        <td>
                            <a class="btn btn-sm btn-outline-primary"
                               asp-controller="AdminMissions"
                               asp-action="Edit"
                               asp-route-id="@mission.Id">
                                Edit
                            </a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    }
    else
    {
        <div class="alert alert-warning">
            No Missions Found.
        </div>
    }
</div>
