@model BountyHuntersBlog.ViewModels.Missions.MissionIndexViewModel
@{
    ViewData["Title"] = "Missions";
}
<h2 class="mb-3">Missions</h2>

<form method="get" class="row g-2 mb-4">
    <div class="col-md-4"><input asp-for="Q" class="form-control" placeholder="Search..." /></div>
    <div class="col-md-3">
        <select asp-for="CategoryId" class="form-select" asp-items="Model.Categories">
            <option value="">-- All Categories --</option>
        </select>
    </div>
    <div class="col-md-3">
        <select asp-for="TagId" class="form-select" asp-items="Model.Tags">
            <option value="">-- All Tags --</option>
        </select>
    </div>
    <div class="col-md-2">
        <button class="btn btn-primary w-100" type="submit">Filter</button>
    </div>
</form>

@if (!Model.Items.Any())
{
    <div class="alert alert-info">No missions found.</div>
}
else
{
    <div class="list-group">
        @foreach (var m in Model.Items)
        {
            <a asp-action="Details" asp-route-id="@m.Id" class="list-group-item list-group-item-action">
                <div class="d-flex w-100 justify-content-between">
                    <h5 class="mb-1">@m.Title</h5>
                    <small>@m.CreatedOn.ToShortDateString()</small>
                </div>
                <p class="mb-1 text-muted">@m.ShortDescription</p>
                <small>@m.CommentsCount comments â€¢ @m.LikesCount likes</small>
            </a>
        }
    </div>
}

@if (User.Identity.IsAuthenticated)
{
    <a asp-action="Create" class="btn btn-success mt-3">Create Mission</a>
}
