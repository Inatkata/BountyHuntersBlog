@model BountyHuntersBlog.ViewModels.Missions.MissionIndexViewModel
@{
    ViewData["Title"] = "All Missions";
}
<div class="d-flex justify-content-between align-items-center mb-3" style="margin-top: 20px;">
    <h2>@ViewData["Title"]</h2>
    @if (User?.Identity?.IsAuthenticated == true)
    {
        <a asp-controller="Missions" asp-action="Create" class="btn btn-primary">
            <i class="fas fa-plus"></i> Create Mission
        </a>
    }
</div>
<hr />

<form method="get" class="row g-2 mb-3">
    <div class="col-sm-4">
        <input name="q" value="@Model.Q" class="form-control" placeholder="Search missions..." />
    </div>
    <div class="col-sm-3">
        <select name="categoryId" class="form-select">
            <option value="">All categories</option>
            @foreach (var c in Model.Categories)
            {
                <option value="@c.Value" selected="@(Model.CategoryId.HasValue && Model.CategoryId.Value.ToString()==c.Value)">
                    @c.Text
                </option>
            }
        </select>
    </div>
    <div class="col-sm-3">
        <select name="tagId" class="form-select">
            <option value="">All tags</option>
            @foreach (var t in Model.Tags)
            {
                <option value="@t.Value" selected="@(Model.TagId.HasValue && Model.TagId.Value.ToString()==t.Value)">
                    @t.Text
                </option>
            }
        </select>
    </div>
    <div class="col-sm-2 d-grid">
        <button type="submit" class="btn btn-info"><i class="fa-solid fa-magnifying-glass"></i> Filter</button>
    </div>
</form>

<div class="row g-4">
    @foreach (var m in Model.Items)
    {
        <div class="col-12 col-sm-6 col-md-4 col-lg-3">
            <div class="card h-100 bg-dark text-white border-0 shadow-sm">
                <div class="d-flex align-items-center justify-content-center" style="height: 180px;">
                    <i class="fa-solid fa-crosshairs fa-4x text-secondary"></i>
                </div>

                <div class="card-body d-flex flex-column">
                    <h5 class="card-title text-truncate" title="@m.Title">@m.Title</h5>
                    <p class="card-text mb-2">
                        <small class="text-muted">@m.CreatedOn.ToLocalTime().ToString("g")</small>
                    </p>
                    <p class="card-text">@m.ShortDescription</p>

                    <div class="mt-auto d-flex gap-2">
                        <a asp-controller="Missions" asp-action="Details" asp-route-id="@m.Id" class="btn btn-info flex-fill">
                            <i class="fas fa-info-circle"></i> Details
                        </a>
                    </div>
                </div>
            </div>
        </div>
    }
</div>

<div class="mt-4">
    @await Html.PartialAsync("_Pagination", Model.Pagination)
</div>
