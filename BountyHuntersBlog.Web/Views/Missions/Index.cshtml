@model IEnumerable<BountyHuntersBlog.Models.Domain.MissionPost>
@{
    ViewData["Title"] = "All Missions";
}

<div class="container mt-4">
    <h2 class="mb-4">All Missions</h2>
    <div class="row row-cols-1 row-cols-md-3 g-4">
        @foreach (var mission in Model)
        {
            <div class="col">
                <div class="card h-100">
                    <img src="@mission.FeaturedImageUrl" class="card-img-top" alt="@mission.Title">
                    <div class="card-body">
                        <h5 class="card-title">@mission.Title</h5>
                        <p class="card-text">@mission.ShortDescription</p>
                        <a asp-controller="Missions" asp-action="Details" asp-route-urlHandle="@mission.UrlHandle" class="btn btn-primary">View More</a>
                    </div>
                    <div class="card-footer text-muted">
                        @mission.MissionDate.ToShortDateString()
                    </div>
                </div>
            </div>
        }
    </div>
</div>