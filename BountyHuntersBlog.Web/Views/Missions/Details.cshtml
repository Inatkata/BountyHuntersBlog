@model BountyHuntersBlog.Models.ViewModels.MissionDetailsViewModel


@{
    ViewData["Title"] = Model.Title;
}

<div class="container mt-4">
    <h2>@Model.Title</h2>
    <p class="text-muted">
        by @Model.User?.DisplayName on @Model.MissionDate.ToString("dd MMM yyyy")
    </p>

    <img src="@Model.FeaturedImageUrl" class="img-fluid mb-3" alt="Image">

    <p class="lead">@Model.Content</p>

    <div class="d-flex align-items-center mb-3">
        <form method="post" asp-action="Like" asp-route-id="@Model.Id" class="me-2">
            <button type="submit" class="btn btn-outline-danger">
                @(Model.Liked ? "Unlike" : "Like")
            </button>
        </form>

        <span class="text-muted">@Model.TotalLikes Likes</span>
    </div>

    <hr />

    <div class="mt-4">
        <h4 class="mt-5">Comments</h4>

        @if (User.Identity?.IsAuthenticated ?? false)
        {
            <form method="post" asp-action="Details">
                <input type="hidden" name="Id" value="@Model.Id" />
                <input type="hidden" name="UrlHandle" value="@Model.UrlHandle" />
                <div class="mb-3">
                    <textarea class="form-control" name="CommentDescription" rows="3" placeholder="Leave a comment..."></textarea>
                </div>
                <button type="submit" class="btn btn-primary">Post Comment</button>
            </form>
        }
        else
        {
            <p>
                <a asp-controller="Account" asp-action="Login">Login</a> to comment.
            </p>
        }

        @if (Model.Comments != null && Model.Comments.Any())
        {
            <ul class="list-group mt-3">
                @foreach (var comment in Model.Comments)
                {
                    <li class="list-group-item">
                        <strong>@comment.UserName</strong> on @comment.DateAdded.ToString("dd MMM yyyy")<br />
                        @comment.Description
                    </li>
                }
            </ul>
        }
        else
        {
            <p class="text-muted mt-3">No comments yet.</p>
        }
    </div>
</div>
