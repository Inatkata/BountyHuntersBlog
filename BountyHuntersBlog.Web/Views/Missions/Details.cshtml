@model BountyHuntersBlog.ViewModels.Missions.MissionDetailsViewModel
@{
    ViewData["Title"] = Model.Title;
}
<div class="d-flex justify-content-between align-items-start mb-3">
    <h2 class="mb-0">@Model.Title</h2>
    <div>
        <span class="badge bg-primary me-2">Likes: @Model.LikesCount</span>
        @if (Model.CanLike)
        {
            <form asp-controller="Likes" asp-action="LikeMission" method="post" class="d-inline">
                <input type="hidden" name="missionId" value="@Model.Id" />
                <button class="btn btn-outline-primary btn-sm">Like</button>
            </form>
        }
    </div>
</div>

<p class="text-muted">
    by @Model.AuthorDisplayName · @Model.CreatedOnUtc.ToLocalTime().ToString("dd MMM yyyy HH:mm")
</p>

<div class="mb-3">
    @Html.Raw(Html.Encode(Model.Description).Replace("\n","<br/>"))
</div>

<div class="mb-3">
    @foreach (var t in Model.TagNames)
    {
        <span class="badge bg-secondary">@t</span>
    }
</div>

<hr />
<h4>Comments</h4>
<partial name="~/Views/Comments/_CommentForm.cshtml" model="Model.Id" />
<partial name="~/Views/Comments/_CommentsList.cshtml" model="Model.Comments" />