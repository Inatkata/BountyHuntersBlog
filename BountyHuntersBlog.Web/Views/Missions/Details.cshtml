@using System.Security.Claims
@model BountyHuntersBlog.ViewModels.Missions.MissionDetailsViewModel
@{
    ViewData["Title"] = "Mission Details";
    var isOwner = (User?.FindFirstValue(ClaimTypes.NameIdentifier) ?? "") == Model.UserId;
}
<div class="d-flex justify-content-between align-items-center mb-3" style="margin-top:20px;">
    <h2>@ViewData["Title"]</h2>
</div>
<hr />

<div class="row justify-content-center" style="margin:0 auto; max-width:900px;">
    <div class="col-md-12">
        <div class="card bg-dark text-white border-0 shadow-sm">
            <div class="card-body">
                <h4 class="card-title mb-1">@Model.Title</h4>
                <div class="small text-muted mb-3">
                    <span class="me-3"><i class="fa-regular fa-user"></i> @Model.UserDisplayName</span>
                    <span><i class="fa-regular fa-clock"></i> @Model.CreatedOn.ToLocalTime().ToString("g")</span>
                </div>

                <div class="mb-2">
                    <span class="badge bg-info me-2"><i class="fa-solid fa-layer-group"></i> @Model.CategoryName</span>
                    @if (Model.Tags?.Any() == true)
                    {
                        foreach (var t in Model.Tags)
                        {
                            <span class="badge bg-secondary me-1"><i class="fa-solid fa-tag"></i> @t.Name</span>
                        }
                    }
                </div>

                <hr />
                <p class="card-text">@Model.Description</p>
                <hr />

                <div class="d-flex gap-2">
                    <a asp-controller="Missions" asp-action="Index" class="btn btn-warning">
                        <i class="fas fa-arrow-left"></i> Back
                    </a>
                    @if (isOwner)
                    {
                        <a asp-controller="Missions" asp-action="Edit" asp-route-id="@Model.Id" class="btn btn-primary">
                            <i class="fas fa-edit"></i> Edit
                        </a>
                        <a asp-controller="Missions" asp-action="Delete" asp-route-id="@Model.Id" class="btn btn-danger">
                            <i class="fas fa-trash"></i> Delete
                        </a>
                    }
                </div>
            </div>
        </div>
    </div>
</div>

@if (Model.Comments?.Any() == true)
{
    <div class="mt-4" style="max-width:900px; margin:0 auto;">
        <h5 class="mb-3"><i class="fa-regular fa-comments"></i> Comments (@Model.CommentsCount)</h5>
        @await Html.PartialAsync("~/Views/Comments/_CommentsList.cshtml", Model.Comments)
    </div>
}

@if (User?.Identity?.IsAuthenticated ?? false)
{
    <div class="mt-3" style="max-width:900px; margin:0 auto;">
        @await Html.PartialAsync("~/Views/Comments/_CommentsForm.cshtml", Model.Id)
    </div>
}
