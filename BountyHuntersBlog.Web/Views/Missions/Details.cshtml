@model BountyHuntersBlog.Models.ViewModels.MissionDetailsViewModel

@{
    ViewData["Title"] = Model.Title;
}

<div class="row mt-3">
    <div class="col-md-8">
        <img src="@Model.FeaturedImageUrl" class="img-fluid mb-3" />
        <h2>@Model.Title</h2>
        <p class="text-muted">@Model.MissionDate.ToShortDateString() by <strong>@Model.AuthorUsername</strong></p>
        <div>
            <p>@Model.Content</p>
        </div>

        <hr />

        <h4>Likes</h4>
        @Html.AntiForgeryToken()
        <button id="likeBtn" class="btn btn-outline-primary" data-post-id="@Model.Id" data-hunter-id="@Model.CurrentHunterId">
            Like (<span id="likeCount">@Model.LikeCount</span>)
        </button>

        <hr />

        <h4>Comments</h4>
        @foreach (var comment in Model.Comments)
        {
            <div class="border p-2 mb-2">
                <strong>@comment.Hunter?.DisplayName</strong>
                <span class="text-muted"> (@comment.CreatedAt.ToShortDateString())</span>
                <p>@comment.Content</p>
            </div>
        }

        <form method="post" asp-controller="MissionComment" asp-action="Add">
            <input type="hidden" name="MissionPostId" value="@Model.Id" />
            <input type="hidden" name="HunterId" value="@Model.CurrentHunterId" />
            @Html.AntiForgeryToken()

            <div class="mb-3">
                <textarea name="Content" class="form-control" rows="3" placeholder="Write your comment..."></textarea>
            </div>

            <button type="submit" class="btn btn-secondary">Post Comment</button>
        </form>
    </div>
</div>

@section Scripts {
    <script>
        document.getElementById("likeBtn").addEventListener("click", function () {
            const postId = this.dataset.postId;
            const hunterId = this.dataset.hunterId;

            fetch('/MissionLike/Like', {
                method: 'POST',
                headers: {
                    'Content-Type': 'application/json',
                    'RequestVerificationToken': document.querySelector('input[name="__RequestVerificationToken"]').value
                },
                body: JSON.stringify({ missionPostId: postId, hunterId: hunterId })
            })
            .then(res => res.json())
            .then(data => {
                document.getElementById("likeCount").innerText = data.totalLikes;
            });
        });
    </script>
}
