@model BountyHuntersBlog.ViewModels.Missions.MissionsPagedVM
@{
    ViewData["Title"] = "Missions";
}
<section class="container py-4">
    @await Html.PartialAsync("_Filters", Model)

    @if (!Model.Items.Any())
    {
        <div class="alert alert-info">No missions found.</div>
    }
    else
    {
        <div class="row g-3">
            @foreach (var m in Model.Items)
            {
                @await Html.PartialAsync("_MissionCard", m)
            }
        </div>
        @await Html.PartialAsync("_Pagination", Model)
    }
</section>