@model BountyHuntersBlog.Models.ViewModels.HomeViewModel

@{
    ViewData["Title"] = "Missions";
}

<h2 class="mt-3">Available Missions</h2>

<form method="get" class="row g-3 mb-4">
    <div class="col-md-5">
        <input type="text" name="searchTerm" value="@Model.SearchTerm" class="form-control" placeholder="Search missions..." />
    </div>
    <div class="col-md-5">
        <select name="factionId" class="form-select">
            <option value="">-- Filter by Faction --</option>
            @foreach (var faction in ViewBag.Factions as List<SelectListItem>)
            {
                <option value="@faction.Value" selected="@faction.Selected">@faction.Text</option>
            }
        </select>

    </div>
    <div class="col-md-2">
        <button type="submit" class="btn btn-primary w-100">Filter</button>
    </div>
</form>

@if (!Model.MissionPosts.Any())
{
    <p>No missions found.</p>
}
else
{
    <div class="row row-cols-1 row-cols-md-2 g-4">
        @foreach (var post in Model.MissionPosts)
        {
            <div class="col">
                <div class="card h-100">
                    <img src="@post.FeaturedImageUrl" class="card-img-top" alt="..." />
                    <div class="card-body">
                        <h5 class="card-title">@post.Title</h5>
                        <p class="card-text text-muted">@post.MissionDate.ToShortDateString()</p>
                        <a asp-controller="Mission" asp-action="Details" asp-route-id="@post.Id" class="btn btn-outline-dark">View Details</a>
                    </div>
                </div>
            </div>
        }
    </div>
}