@model BountyHuntersBlog.Models.ViewModels.HomeViewModel

@{
    ViewData["Title"] = "Missions";
}

<h2 class="mt-4 mb-3">Available Missions</h2>

<form method="get" class="row g-3 mb-4">
    <div class="col-md-5">
        <input type="text" name="searchTerm" value="@Model.SearchTerm" class="form-control" placeholder="Search missions..." />
    </div>
    <div class="col-md-5">
        <select name="factionId" class="form-select">
            <option value="">All Factions</option>
            @foreach (var faction in Model.Factions)
            {
                <option value="@faction.Id" selected="@(Model.FactionId == faction.Id ? "selected" : null)">
                    @faction.Name
                </option>


            }
        </select>
    </div>
    <div class="col-md-2">
        <button type="submit" class="btn btn-primary w-100">Filter</button>
    </div>
</form>

@if (!Model.MissionPosts.Any())
{
    <p>No missions found.</p>
}
else
{
    <div class="row row-cols-1 row-cols-md-2 g-4">
        @foreach (var mission in Model.MissionPosts)
        {
            <div class="col">
                <div class="card h-100">
                    <img src="@mission.FeaturedImageUrl" class="card-img-top" alt="Image" />
                    <div class="card-body">
                        <h5 class="card-title">@mission.Title</h5>
                        <p class="card-text">@mission.ShortDescription</p>
                        <a href="/missions/@mission.UrlHandle" class="btn btn-outline-primary">View Details</a>
                    </div>
                    <div class="card-footer text-muted small">
                        <span>By @mission.Author.DisplayName</span> |
                        <span>@mission.MissionDate.ToShortDateString()</span>
                    </div>
                </div>
            </div>
        }
    </div>
}