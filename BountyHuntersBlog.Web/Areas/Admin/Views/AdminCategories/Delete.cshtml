@model BountyHuntersBlog.ViewModels.Admin.Categories.AdminCategoryListItemVM
@{
    ViewData["Title"] = "Delete Category";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}

<h2>Delete Category</h2>
<div class="alert alert-warning">
    This category will be marked as deleted but kept in the database. Are you sure?
</div>

<dl class="row">
    <dt class="col-sm-2">Name</dt>
    <dd class="col-sm-10">@Model.Name</dd>
</dl>

<form asp-area="Admin" asp-controller="AdminCategories" asp-action="Delete" asp-route-id="@Model.Id" method="post">
    @Html.AntiForgeryToken()
    <button type="submit" class="btn btn-danger">Soft Delete</button>
    <a asp-area="Admin" asp-controller="AdminCategories" asp-action="Index" class="btn btn-secondary">Cancel</a>
</form>