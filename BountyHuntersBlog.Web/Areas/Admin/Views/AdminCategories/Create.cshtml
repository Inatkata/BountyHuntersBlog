@* Areas/Admin/Views/AdminCategories/Edit.cshtml *@
@model BountyHuntersBlog.ViewModels.Admin.Categories.AdminCategoryFormVM
@{
    ViewData["Title"] = "Edit Category";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}
<a class="btn btn-link p-0 mb-2" asp-area="Admin" asp-controller="AdminCategories" asp-action="Index">← Back to list</a>
<h2>Edit Category</h2>

<form asp-area="Admin" asp-controller="AdminCategories" asp-action="Edit" method="post" class="mt-3">
    @Html.AntiForgeryToken()
    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
    <input type="hidden" asp-for="Id" />

    <div class="mb-3">
        <label asp-for="Name" class="form-label"></label>
        <input asp-for="Name" class="form-control" />
        <span class="text-danger" asp-validation-for="Name"></span>
    </div>

    <div class="form-check mb-3">
        <input asp-for="IsDeleted" class="form-check-input" />
        <label asp-for="IsDeleted" class="form-check-label"></label>
    </div>

    <div class="d-flex gap-2">
        <button type="submit" class="btn btn-primary">Save</button>
        <a asp-area="Admin" asp-controller="AdminCategories" asp-action="Index" class="btn btn-secondary">Cancel</a>
    </div>
</form>

@section Scripts { <partial name="~/Views/Shared/_ValidationScriptsPartial.cshtml" /> }