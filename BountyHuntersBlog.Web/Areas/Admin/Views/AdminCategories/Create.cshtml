@model BountyHuntersBlog.ViewModels.Admin.Categories.AdminCategoryFormVM
@{
    ViewData["Title"] = "Create Category";
}

<h2 class="mb-3">Create Category</h2>

<div asp-validation-summary="ModelOnly" class="text-danger"></div>

<form asp-area="Admin" asp-controller="AdminCategories" asp-action="Create" method="post" class="card p-3">
    @Html.AntiForgeryToken()
    @await Html.PartialAsync("_Form", Model)
    <div class="d-flex gap-2">
        <button type="submit" class="btn btn-primary">Save</button>
        <a asp-area="Admin" asp-controller="AdminCategories" asp-action="Index" class="btn btn-outline-secondary">Cancel</a>
    </div>
</form>

@section Scripts { <partial name="_ValidationScriptsPartial" /> }