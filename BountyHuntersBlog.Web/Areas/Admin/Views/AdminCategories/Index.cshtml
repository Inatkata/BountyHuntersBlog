@model IEnumerable<BountyHuntersBlog.Services.DTOs.CategoryDto>
@{
    ViewData["Title"] = "Categories";
    Layout = "/Views/Shared/_Layout.cshtml";
}
<div class="d-flex justify-content-between align-items-center">
    <h2>Categories</h2>
    <a class="btn btn-primary" asp-action="Create">Add Category</a>
</div>
<table class="table table-striped mt-3">
    <thead><tr><th>Name</th><th style="width:180px"></th></tr></thead>
    <tbody>
    @foreach (var c in Model)
    {
        <tr>
            <td>@c.Name</td>
            <td class="text-end">
                <a class="btn btn-sm btn-outline-secondary" asp-action="Edit" asp-route-id="@c.Id">Edit</a>
                <form asp-action="Delete" asp-route-id="@c.Id" method="post" class="d-inline">
                    @Html.AntiForgeryToken()
                    <button type="submit" class="btn btn-sm btn-outline-danger">Delete</button>
                </form>
            </td>
        </tr>
    }
    </tbody>
</table>