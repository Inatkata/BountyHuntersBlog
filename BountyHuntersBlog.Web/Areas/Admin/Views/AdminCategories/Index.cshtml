@model IEnumerable<dynamic>
@{
    ViewData["Title"] = "Categories";
}
<div class="d-flex justify-content-between align-items-center mb-3">
    <h2>Categories</h2>
    <a class="btn btn-primary" asp-action="Create">Add</a>
</div>
<table class="table table-striped">
    <thead><tr><th>Name</th><th style="width:160px;"></th></tr></thead>
    <tbody>
    @foreach (var c in Model)
    {
        <tr>
            <td>@c.Name</td>
            <td class="text-end">
                <a class="btn btn-sm btn-outline-primary" asp-action="Edit" asp-route-id="@c.Id">Edit</a>
                <form asp-action="Delete" asp-route-id="@c.Id" method="post" class="d-inline">
                    <button class="btn btn-sm btn-outline-danger">Delete</button>
                    @Html.AntiForgeryToken()
                </form>
            </td>
        </tr>
    }
    </tbody>
</table>