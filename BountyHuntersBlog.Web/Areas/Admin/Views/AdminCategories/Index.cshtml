@model List<AdminCategoryListItemVM>

<h2>Categories</h2>
<a asp-action="Create" class="btn btn-primary mb-2">Add Category</a>

<table class="table">
    <thead>
    <tr>
        <th>Name</th>
        <th>Is Deleted</th>
        <th></th>
    </tr>
    </thead>
    <tbody>
    @foreach (var cat in Model)
    {
        <tr>
            <td>@cat.Name</td>
            <td>@cat.IsDeleted</td>
            <td>
                <a asp-action="Edit" asp-route-id="@cat.Id" class="btn btn-warning btn-sm">Edit</a>
                <form asp-action="Delete" asp-route-id="@cat.Id" method="post" class="d-inline">
                    <button type="submit" class="btn btn-danger btn-sm">Delete</button>
                </form>
            </td>
        </tr>
    }
    </tbody>
</table>