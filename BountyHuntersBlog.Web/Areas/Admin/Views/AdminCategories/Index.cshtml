@{
    ViewData["Title"] = "Categories";
}
<partial name="~/Areas/Admin/Views/Shared/_ListHeader.cshtml" />
<table class="table table-hover align-middle">
    <thead>
    <tr>
        <th>Name</th>
        <th class="text-end">Actions</th>
    </tr>
    </thead>
    <tbody>
    @if (Model is IEnumerable<dynamic> items)
    {
        foreach (var it in items)
        {
            <tr>
                <td>@(it.Name)</td>
                <td class="text-end">
                    <a class="btn btn-sm btn-outline-secondary" asp-action="Edit" asp-route-id="@(it.Id)">Edit</a>
                    <a class="btn btn-sm btn-outline-danger" asp-action="Delete" asp-route-id="@(it.Id)">Delete</a>
                </td>
            </tr>
        }
    }
    else
    {
        <tr><td colspan="2" class="text-muted">No data. Bind IEnumerable to the view.</td></tr>
    }
    </tbody>
</table>