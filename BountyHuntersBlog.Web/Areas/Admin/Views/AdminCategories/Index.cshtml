@model IEnumerable<BountyHuntersBlog.ViewModels.Admin.Categories.AdminCategoryListItemVM>
@{
    ViewData["Title"] = "Categories";
}

<h2 class="mb-3">Categories</h2>

@if (TempData["Success"] is string s) { <div class="alert alert-success">@s</div> }
@if (TempData["Error"] is string e) { <div class="alert alert-danger">@e</div> }

<div class="mb-3">
    <a asp-area="Admin" asp-controller="AdminCategories" asp-action="Create" class="btn btn-primary">Create New</a>
</div>

@if (!Model.Any())
{
    <div class="alert alert-info">No categories yet.</div>
}
else
{
    <table class="table table-striped align-middle">
        <thead>
        <tr>
            <th>Name</th>
            <th style="width:120px;">Deleted</th>
            <th style="width:220px;"></th>
        </tr>
        </thead>
        <tbody>
        @foreach (var c in Model)
        {
            <tr>
                <td>@c.Name</td>
                <td>@(c.IsDeleted ? "Yes" : "No")</td>
                <td class="text-end">
                    <a asp-area="Admin" asp-controller="AdminCategories" asp-action="Edit" asp-route-id="@c.Id" class="btn btn-sm btn-outline-secondary">Edit</a>
                    <form asp-area="Admin" asp-controller="AdminCategories" asp-action="Delete" asp-route-id="@c.Id" method="post" class="d-inline">
                        <button type="submit" class="btn btn-sm btn-outline-danger" onclick="return confirm('Delete this category?');">Delete</button>
                        @Html.AntiForgeryToken()
                    </form>
                </td>
            </tr>
        }
        </tbody>
    </table>
}