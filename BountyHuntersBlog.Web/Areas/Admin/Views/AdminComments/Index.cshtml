@model IEnumerable<BountyHuntersBlog.ViewModels.Admin.Comments.AdminCommentListItemVM>
@{
    ViewData["Title"] = "Comments";
}

<h2 class="mb-3">Comments</h2>

@if (TempData["Success"] is string s)
{
    <div class="alert alert-success">@s</div>
}
@if (TempData["Error"] is string e)
{
    <div class="alert alert-danger">@e</div>
}

@if (!Model.Any())
{
    <div class="alert alert-info">No comments found.</div>
}
else
{
    <table class="table table-striped align-middle">
        <thead>
            <tr>
                <th style="width:80px;">Id</th>
                <th>Content</th>
                <th style="width:180px;">Author</th>
                <th style="width:220px;">Mission</th>
                <th style="width:170px;">Created</th>
                <th style="width:110px;">Deleted</th>
                <th style="width:200px;"></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var c in Model)
            {
                <tr>
                    <td>@c.Id</td>
                    <td class="text-truncate" style="max-width:420px;" title="@c.Content">@c.Content</td>
                    <td>@c.UserName</td>
                    <td>@c.MissionTitle</td>
                    <td>@c.CreatedOn.ToString("yyyy-MM-dd HH:mm")</td>
                    <td>@(c.IsDeleted ? "Yes" : "No")</td>
                    <td class="text-end">
                        <a asp-area="Admin" asp-controller="AdminComments" asp-action="Details" asp-route-id="@c.Id"
                           class="btn btn-sm btn-outline-secondary">Details</a>

                        <form asp-area="Admin" asp-controller="AdminComments" asp-action="Delete" asp-route-id="@c.Id"
                              method="post" class="d-inline">
                            @Html.AntiForgeryToken()
                            <button type="submit" class="btn btn-sm btn-outline-danger"
                                    onclick="return confirm('Delete this comment?');">
                                Delete
                            </button>
                        </form>
                    </td>
                </tr>
            }
        </tbody>
    </table>
}
