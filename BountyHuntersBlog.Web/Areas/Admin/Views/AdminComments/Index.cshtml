@* Areas/Admin/Views/AdminComments/Index.cshtml *@
@model IReadOnlyList<BountyHuntersBlog.ViewModels.Admin.Comments.AdminCommentListItemVM>
@{
    ViewData["Title"] = "Comments";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}
<h2 class="mb-3">Comments</h2>

@if (Model == null || !Model.Any())
{
    <div class="alert alert-info">No comments found.</div>
}
else
{
    <table class="table table-striped align-middle">
        <thead>
            <tr>
                <th style="width:80px">Id</th>
                <th>User</th>
                <th>Mission</th>
                <th>Content</th>
                <th style="width:120px">Status</th>
                <th style="width:160px" class="text-end">Actions</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var c in Model)
            {
                <tr>
                    <td>@c.Id</td>
                    <td>@c.UserName</td>
                    <td>@c.MissionTitle</td>
                    <td>@c.Content</td>
                    <td>
                        @if (c.IsDeleted)
                        {
                            <span class="badge bg-danger">Deleted</span>
                        }
                        else
                        {
                            <span class="badge bg-success">Active</span>
                        }
                    </td>
                    <td class="text-end">
                        <a class="btn btn-sm btn-outline-secondary"
                           asp-area="Admin" asp-controller="AdminComments" asp-action="Details" asp-route-id="@c.Id">
                            Details
                        </a>
                        @if (!c.IsDeleted)
                        {
                            <form method="post" class="d-inline"
                                  asp-area="Admin" asp-controller="AdminComments" asp-action="Delete"
                                  asp-route-id="@c.Id">
                                @Html.AntiForgeryToken()
                                <button type="submit" class="btn btn-sm btn-outline-danger"
                                        onclick="return confirm('Soft delete this comment?');">
                                    Delete
                                </button>
                            </form>
                        }
                    </td>
                </tr>
            }
        </tbody>
    </table>
}
