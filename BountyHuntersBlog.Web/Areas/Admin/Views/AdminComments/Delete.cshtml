@* Areas/Admin/Views/AdminComments/Details.cshtml *@
@model BountyHuntersBlog.ViewModels.Admin.Comments.AdminCommentListItemVM
@{
    ViewData["Title"] = "Comment Details";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}
<a class="btn btn-link p-0 mb-2" asp-area="Admin" asp-controller="AdminComments" asp-action="Index">← Back to list</a>
<h2>Comment Details</h2>

<dl class="row">
    <dt class="col-sm-2">Id</dt>
    <dd class="col-sm-10">@Model.Id</dd>

    <dt class="col-sm-2">User</dt>
    <dd class="col-sm-10">@Model.UserName</dd>

    <dt class="col-sm-2">Mission</dt>
    <dd class="col-sm-10">@Model.MissionTitle</dd>

    <dt class="col-sm-2">Content</dt>
    <dd class="col-sm-10">@Model.Content</dd>

    <dt class="col-sm-2">Created</dt>
    <dd class="col-sm-10">@Model.CreatedOn</dd>

    <dt class="col-sm-2">Status</dt>
    <dd class="col-sm-10">
        @if (Model.IsDeleted)
        {
            <span class="badge bg-danger">Deleted</span>
        }
        else
        {
            <span class="badge bg-success">Active</span>
        }
    </dd>
</dl>

@if (!Model.IsDeleted)
{
    <form asp-area="Admin" asp-controller="AdminComments" asp-action="Delete" asp-route-id="@Model.Id" method="post" class="mt-3">
        @Html.AntiForgeryToken()
        <button type="submit" class="btn btn-danger">Soft Delete</button>
        <a asp-area="Admin" asp-controller="AdminComments" asp-action="Index" class="btn btn-secondary ms-2">Cancel</a>
    </form>
}
else
{
    <a asp-area="Admin" asp-controller="AdminComments" asp-action="Index" class="btn btn-secondary">Back</a>
}