@model BountyHuntersBlog.ViewModels.Admin.Comments.AdminCommentListItemVM
@{
    ViewData["Title"] = "Delete Comment";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}

<h2>Delete Comment</h2>
<div class="alert alert-warning">
    This comment will be marked as deleted but kept in the database. Are you sure?
</div>

<dl class="row">
    <dt class="col-sm-2">User</dt>
    <dd class="col-sm-10">@Model.UserName</dd>

    <dt class="col-sm-2">Mission</dt>
    <dd class="col-sm-10">@Model.MissionTitle</dd>

    <dt class="col-sm-2">Content</dt>
    <dd class="col-sm-10">@Model.Content</dd>
</dl>

<form asp-area="Admin" asp-controller="AdminComments" asp-action="Delete" asp-route-id="@Model.Id" method="post">
    @Html.AntiForgeryToken()
    <button type="submit" class="btn btn-danger">Soft Delete</button>
    <a asp-area="Admin" asp-controller="AdminComments" asp-action="Index" class="btn btn-secondary">Cancel</a>
</form>