@model IEnumerable<BountyHuntersBlog.Services.DTOs.TagDto>
<h2>Tags</h2>
<p><a class="btn btn-primary" asp-action="Create">Add</a></p>
<table class="table">
    <thead><tr><th>Name</th><th style="width:160px;"></th></tr></thead>
    <tbody>
        @foreach (var c in Model)
        {
            <tr>
                <td>@c.Name</td>
                <td class="text-end">
                    <a class="btn btn-sm btn-outline-secondary" asp-action="Edit" asp-route-id="@c.Id">Edit</a>
                    <form method="post" asp-action="Delete" asp-route-id="@c.Id" class="d-inline">
                        <button class="btn btn-sm btn-outline-danger" type="submit">Delete</button>
                    </form>
                </td>
            </tr>
        }
    </tbody>
</table>