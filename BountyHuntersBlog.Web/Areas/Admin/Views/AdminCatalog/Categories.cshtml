@using Microsoft.EntityFrameworkCore
@model IReadOnlyList<BountyHuntersBlog.Services.DTOs.CategoryDto>

@{
    ViewData["Title"] = "Categories";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}
<section class="container py-4">
    <div class="d-flex justify-content-between align-items-center mb-3">
        <h2 class="mb-0">Categories</h2>
        <a asp-action="CategoryEdit" class="btn btn-primary">Create</a>
    </div>

    @if (!Model.Any())
    {
        <div class="alert alert-info">No categories.</div>
    }
    else
    {
        <table class="table table-striped align-middle">
            <thead>
            <tr>
                <th>#</th>
                <th>Name</th>
                <th class="text-end">Actions</th>
            </tr>
            </thead>
            <tbody>
            @foreach (var c in Model)
            {
                <tr>
                    <td>@c.Id</td>
                    <td>@c.Name</td>
                    <td class="text-end">
                        <a asp-action="CategoryEdit" asp-route-id="@c.Id" class="btn btn-sm btn-outline-secondary">Edit</a>
                        <form asp-action="CategoryDelete" method="post" class="d-inline">
                            <input type="hidden" name="id" value="@c.Id" />
                            <button class="btn btn-sm btn-outline-danger" type="submit"
                                    onclick="return confirm('Delete category?')">Delete</button>
                        </form>
                    </td>
                </tr>
            }
            </tbody>
        </table>
    }
</section>