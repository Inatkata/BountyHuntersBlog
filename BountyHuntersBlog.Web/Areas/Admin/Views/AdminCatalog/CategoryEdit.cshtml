@using Microsoft.EntityFrameworkCore
@model BountyHuntersBlog.Services.DTOs.CategoryDto
@{
    ViewData["Title"] = Model.Id == 0 ? "Create Category" : "Edit Category";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}
<section class="container py-4">
    <h2>@ViewData["Title"]</h2>
    <form asp-action="CategoryEdit" method="post" class="mt-3">
        <input type="hidden" asp-for="Id" />
        <div class="mb-3">
            <label class="form-label">Name</label>
            <input asp-for="Name" class="form-control" />
            <span asp-validation-for="Name" class="text-danger"></span>
        </div>
        <button class="btn btn-primary">Save</button>
        <a asp-action="Categories" class="btn btn-link">Back</a>
    </form>
</section>