@model BountyHuntersBlog.ViewModels.Missions.MissionEditViewModel
@{
    ViewData["Title"] = "Edit Tags for Mission";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}

<h2>Edit Tags for Mission: @Model.Title</h2>
<hr />

<form asp-action="Edit" method="post">
    @Html.AntiForgeryToken()
    <input type="hidden" name="missionId" value="@Model.Id" />

    <div class="mb-3">
        <label class="form-label">Tags</label>
        <select name="tagIds" class="form-select" multiple size="8">
            @foreach (var tag in Model.Tags)
            {
                <option value="@tag.Value" selected="@tag.Selected">@tag.Text</option>
            }
        </select>
    </div>

    <div class="d-flex gap-2">
        <button type="submit" class="btn btn-primary">Save Tags</button>
        <a asp-area="Admin" asp-controller="AdminMissions" asp-action="Edit" asp-route-id="@Model.Id" class="btn btn-secondary">Cancel</a>
    </div>
</form>