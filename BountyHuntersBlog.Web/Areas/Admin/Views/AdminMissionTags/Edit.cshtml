@model BountyHuntersBlog.ViewModels.MissionTagViewModel
@{
    ViewData["Title"] = "Edit Mission Tags";
    var tags = Model.Tags as List<SelectListItem>;
    int missionId = Model.MissionId;
    string missionTitle = Model.MissionTitle;
}

<h2>Edit Tags for Mission: @missionTitle</h2>

<form method="post">
    <input type="hidden" name="missionId" value="@missionId" />
    <div class="mb-3">
        @foreach (var tag in tags)
        {
            <div class="form-check">
                <input class="form-check-input" type="checkbox" name="tagIds" value="@tag.Value" @(tag.Selected ? "checked" : "") />
                <label class="form-check-label">@tag.Text</label>
            </div>
        }
    </div>
    <button type="submit" class="btn btn-primary">Save</button>
    <a class="btn btn-secondary" asp-area="Admin" asp-controller="AdminMissions" asp-action="Index">Cancel</a>
</form>