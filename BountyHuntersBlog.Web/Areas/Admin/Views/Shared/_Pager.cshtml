@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers
@model BountyHuntersBlog.ViewModels.Shared.PagerViewModel
@{
    var totalPages = (int)Math.Ceiling((double)Model.TotalCount / Model.PageSize);
    if (totalPages < 1) totalPages = 1;
}
<nav aria-label="Pagination">
    <ul class="pagination justify-content-center">
        <li class="page-item @(Model.Page <= 1 ? "disabled" : "")">
            <a class="page-link"
               asp-area="@Model.Area"
               asp-controller="@Model.Controller"
               asp-action="@Model.Action"
               asp-all-route-data="Model.RouteValues"
               asp-route-page="@(Model.Page - 1)"
               asp-route-pageSize="@Model.PageSize">Prev</a>
        </li>

        @for (var p = 1; p <= totalPages; p++)
        {
            <li class="page-item @(p == Model.Page ? "active" : "")">
                <a class="page-link"
                   asp-area="@Model.Area"
                   asp-controller="@Model.Controller"
                   asp-action="@Model.Action"
                   asp-all-route-data="Model.RouteValues"
                   asp-route-page="@p"
                   asp-route-pageSize="@Model.PageSize">@p</a>
            </li>
        }

        <li class="page-item @(Model.Page >= totalPages ? "disabled" : "")">
            <a class="page-link"
               asp-area="@Model.Area"
               asp-controller="@Model.Controller"
               asp-action="@Model.Action"
               asp-all-route-data="Model.RouteValues"
               asp-route-page="@(Model.Page + 1)"
               asp-route-pageSize="@Model.PageSize">Next</a>
        </li>
    </ul>
</nav>