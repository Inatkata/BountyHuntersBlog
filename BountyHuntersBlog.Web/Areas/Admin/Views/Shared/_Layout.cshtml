@using Microsoft.AspNetCore.Identity
@inject SignInManager<BountyHuntersBlog.Data.Models.ApplicationUser> SignInManager
@{
    var title = ViewData["Title"] as string ?? "Admin";
}
<!doctype html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <title>@title - Admin</title>
    <link href="https://cdn.jsdelivr.net/npm/bootswatch@5.3.3/dist/flatly/bootstrap.min.css" rel="stylesheet">
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.2/css/all.min.css" rel="stylesheet" />
    @RenderSection("Head", required: false)
</head>
<body class="d-flex flex-column min-vh-100">
<header class="border-bottom">
    <nav class="navbar navbar-expand-lg navbar-dark bg-dark">
        <div class="container">
            <a class="navbar-brand fw-bold" asp-area="Admin" asp-controller="AdminHome" asp-action="Index">Admin</a>
            <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#adminnav">
                <span class="navbar-toggler-icon"></span>
            </button>
            <div class="collapse navbar-collapse" id="adminnav">
                <ul class="navbar-nav me-auto">
                    <li class="nav-item"><a class="nav-link" asp-area="Admin" asp-controller="AdminCatalog" asp-action="Categories">Categories</a></li>
                    <li class="nav-item"><a class="nav-link" asp-area="Admin" asp-controller="AdminCatalog" asp-action="Tags">Tags</a></li>
                    <li class="nav-item"><a class="nav-link" asp-area="Admin" asp-controller="AdminUsers" asp-action="Index">Users</a></li>
                </ul>
                <ul class="navbar-nav ms-auto">
                    <li class="nav-item"><a class="nav-link" asp-area="" asp-controller="Home" asp-action="Index">← Public</a></li>
                    <li class="nav-item">
                        <form asp-area="" asp-controller="Account" asp-action="Logout" method="post" class="d-inline">
                            <button class="btn btn-link nav-link" type="submit">Logout</button>
                        </form>
                    </li>
                </ul>
            </div>
        </div>
    </nav>
</header>

<main class="flex-fill">
    <div class="container py-3">
        @if (TempData["Msg"] is string msg)
        {
            <div class="alert alert-success">@msg</div>
        }
        @RenderBody()
    </div>
</main>

<footer class="bg-dark text-white-50 border-top py-3 mt-auto">
    <div class="container d-flex justify-content-between small">
        <span>Admin Panel</span>
        <a asp-area="" asp-controller="Home" asp-action="Index" class="text-decoration-none text-white-50">Public</a>
    </div>
</footer>

<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>
@RenderSection("Scripts", required: false)
</body>
</html>
