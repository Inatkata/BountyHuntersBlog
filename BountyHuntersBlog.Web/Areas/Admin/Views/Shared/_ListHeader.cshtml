@* Areas/Admin/Views/Shared/_ListHeader.cshtml *@
@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers
@model (string Title, string CreateAction, string? Area, string Controller)
<div class="d-flex justify-content-between align-items-center mb-3">
    <h2 class="m-0">@Model.Title</h2>
    <a class="btn btn-primary"
       asp-area="@Model.Area"
       asp-controller="@Model.Controller"
       asp-action="@Model.CreateAction">Add New</a>
</div>