@model BountyHuntersBlog.ViewModels.Admin.Tags.AdminTagFormVM
@{
    ViewData["Title"] = "Edit Tag";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}

<h2 class="mb-3">Edit Tag</h2>

<div asp-validation-summary="ModelOnly" class="text-danger"></div>

<form asp-area="Admin" asp-controller="AdminTags" asp-action="Edit" method="post" class="card p-3">
    @Html.AntiForgeryToken()
    <input type="hidden" asp-for="Id" />
    @await Html.PartialAsync("_Form", Model)
    <div class="d-flex gap-2">
        <button type="submit" class="btn btn-primary">Save</button>
        <a asp-area="Admin" asp-controller="AdminTags" asp-action="Index" class="btn btn-outline-secondary">Back</a>
    </div>
</form>

@section Scripts { <partial name="_ValidationScriptsPartial" /> }