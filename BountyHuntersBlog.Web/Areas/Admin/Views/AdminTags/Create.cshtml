@model BountyHuntersBlog.ViewModels.Admin.Tags.AdminTagFormVM

@{
    ViewData["Title"] = "Create Tag";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}
<a class="btn btn-link p-0 mb-2" asp-area="Admin" asp-controller="AdminTags" asp-action="Index">← Back to list</a>
<h2>Create Tag</h2>

<form asp-area="Admin" asp-controller="AdminTags" asp-action="Create" method="post" class="mt-3">
    @Html.AntiForgeryToken()
    <div class="mb-3">
        <label asp-for="Name" class="form-label"></label>
        <input asp-for="Name" class="form-control" />
        <span asp-validation-for="Name" class="text-danger"></span>
    </div>

    <div class="form-check mb-3">
        <input asp-for="IsDeleted" class="form-check-input" />
        <label asp-for="IsDeleted" class="form-check-label"></label>
    </div>

    <div class="d-flex gap-2">
        <button type="submit" class="btn btn-success">Create</button>
        <a asp-area="Admin" asp-controller="AdminTags" asp-action="Index" class="btn btn-secondary">Cancel</a>
    </div>
</form>

@section Scripts { <partial name="_ValidationScriptsPartial" /> }