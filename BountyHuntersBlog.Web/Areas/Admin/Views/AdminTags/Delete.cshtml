@model BountyHuntersBlog.ViewModels.Admin.Tags.AdminTagListItemVM
@{
    ViewData["Title"] = "Delete Tag";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}
<h2>Delete Tag</h2>
<div class="alert alert-warning">
    This tag will be marked as deleted but kept in the database. Are you sure?
</div>

<dl class="row">
    <dt class="col-sm-2">Name</dt>
    <dd class="col-sm-10">@Model.Name</dd>
</dl>

<form asp-area="Admin" asp-controller="AdminTags" asp-action="Delete" asp-route-id="@Model.Id" method="post">
    @Html.AntiForgeryToken()
    <button type="submit" class="btn btn-danger">Soft Delete</button>
    <a asp-area="Admin" asp-controller="AdminTags" asp-action="Index" class="btn btn-secondary">Cancel</a>
</form>