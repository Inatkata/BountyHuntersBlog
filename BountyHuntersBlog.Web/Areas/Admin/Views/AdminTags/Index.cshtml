@using Microsoft.AspNetCore.Mvc.TagHelpers
@model IEnumerable<BountyHuntersBlog.ViewModels.Admin.Tags.AdminTagFormVM>
@{
    ViewData["Title"] = "Tags";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}

<h2 class="mb-3">Tags</h2>

@if (TempData["Success"] is string s) { <div class="alert alert-success">@s</div> }
@if (TempData["Error"] is string e) { <div class="alert alert-danger">@e</div> }

<div class="mb-3">
    <a asp-area="Admin" asp-controller="AdminTags" asp-action="Create" class="btn btn-primary">Create New</a>
</div>

@if (!Model.Any())
{
    <div class="alert alert-info">No tags yet.</div>
}
else
{
    <table class="table table-striped align-middle">
        <thead>
        <tr>
            <th>Name</th>
            <th style="width:110px;">Deleted</th>
            <th style="width:220px;"></th>
        </tr>
        </thead>
        <tbody>
        @foreach (var t in Model)
        {
            <tr>
                <td>@t.Name</td>
                <td>@(t.IsDeleted ? "Yes" : "No")</td>
                <td class="text-end">
                    <a asp-area="Admin" asp-controller="AdminTags" asp-action="Edit" asp-route-id="@t.Id"
                       class="btn btn-sm btn-outline-primary">Edit</a>
                    <form asp-area="Admin" asp-controller="AdminTags" asp-action="Delete" asp-route-id="@t.Id"
                          method="post" class="d-inline">
                        @Html.AntiForgeryToken()
                        <button type="submit" class="btn btn-sm btn-outline-danger"
                                onclick="return confirm('Delete this tag?');">Delete</button>
                    </form>
                </td>
            </tr>
        }
        </tbody>
    </table>
}