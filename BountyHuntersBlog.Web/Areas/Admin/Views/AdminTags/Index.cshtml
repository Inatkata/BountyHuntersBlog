@model IEnumerable<BountyHuntersBlog.ViewModels.Admin.Tags.AdminTagListItemVM>

<h2 class="mb-3">Tags (Admin)</h2>

<p>
    <a class="btn btn-primary" asp-action="Create">New Tag</a>
</p>

@if (TempData["Success"] is string s)
{
    <div class="alert alert-success">@s</div>
}
@if (TempData["Error"] is string e)
{
    <div class="alert alert-danger">@e</div>
}

<table class="table table-striped align-middle">
    <thead>
    <tr>
        <th>Id</th>
        <th>Name</th>
        <th>Deleted</th>
        <th class="text-end"></th>
    </tr>
    </thead>
    <tbody>
    @foreach (var t in Model)
    {
        <tr>
            <td>@t.Id</td>
            <td>@t.Name</td>
            <td>@t.IsDeleted</td>
            <td class="text-end">
                <a class="btn btn-sm btn-outline-secondary" asp-action="Edit" asp-route-id="@t.Id">Edit</a>
                <form asp-action="Delete" asp-route-id="@t.Id" method="post" class="d-inline">
                    @Html.AntiForgeryToken()
                    <button type="submit" class="btn btn-sm btn-danger"
                            onclick="return confirm('Delete tag @t.Name ?');">
                        Delete
                    </button>
                </form>
            </td>
        </tr>
    }
    </tbody>
</table>