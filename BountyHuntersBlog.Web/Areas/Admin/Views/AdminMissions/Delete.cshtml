@model BountyHuntersBlog.Services.DTOs.MissionDto
@{
    ViewData["Title"] = "Delete Mission";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}

<h2>Delete Mission</h2>
<div class="alert alert-warning">
    This mission will be marked as deleted but kept in the database. Are you sure?
</div>

<dl class="row">
    <dt class="col-sm-2">Title</dt>
    <dd class="col-sm-10">@Model.Title</dd>

    <dt class="col-sm-2">Category</dt>
    <dd class="col-sm-10">@Model.CategoryName</dd>

    <dt class="col-sm-2">Completed</dt>
    <dd class="col-sm-10">@Model.IsCompleted</dd>
</dl>

<form asp-area="Admin" asp-controller="AdminMissions" asp-action="Delete" asp-route-id="@Model.Id" method="post">
    @Html.AntiForgeryToken()
    <button type="submit" class="btn btn-danger">Soft Delete</button>
    <a asp-area="Admin" asp-controller="AdminMissions" asp-action="Index" class="btn btn-secondary">Cancel</a>
</form>