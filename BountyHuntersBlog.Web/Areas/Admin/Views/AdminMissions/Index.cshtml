@{
    ViewData["Title"] = "Missions";
}
<partial name="~/Areas/Admin/Views/Shared/_ListHeader.cshtml" />
<table class="table table-hover align-middle">
    <thead>
    <tr>
        <th>Title</th>
        <th>Category</th>
        <th>Completed</th>
        <th class="text-end">Actions</th>
    </tr>
    </thead>
    <tbody>
    @if (Model is IEnumerable<dynamic> items)
    {
        foreach (var m in items)
        {
            <tr>
                <td>@m.Title</td>
                <td>@m.CategoryName</td>
                <td>@(m.IsCompleted ? "Yes" : "No")</td>
                <td class="text-end">
                    <a class="btn btn-sm btn-outline-secondary" asp-action="Edit" asp-route-id="@(m.Id)">Edit</a>
                    <a class="btn btn-sm btn-outline-danger" asp-action="Delete" asp-route-id="@(m.Id)">Delete</a>
                </td>
            </tr>
        }
    }
    else
    {
        <tr><td colspan="4" class="text-muted">No data. Bind IEnumerable to the view.</td></tr>
    }
    </tbody>
</table>