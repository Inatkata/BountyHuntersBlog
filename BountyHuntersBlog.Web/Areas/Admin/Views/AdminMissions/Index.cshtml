@* Areas/Admin/Views/AdminMissions/Index.cshtml *@
@model IEnumerable<BountyHuntersBlog.ViewModels.Admin.Missions.AdminMissionListItemVM>
<h2>Missions (Admin)</h2>

<p><a class="btn btn-primary" asp-action="Create">New Mission</a></p>

<table class="table table-striped align-middle">
    <thead>
    <tr>
        <th>Id</th><th>Title</th><th>Category</th><th>Completed</th><th>Deleted</th><th>Likes</th><th>Comments</th><th></th>
    </tr>
    </thead>
    <tbody>
    @foreach (var m in Model)
    {
        <tr>
            <td>@m.Id</td>
            <td>@m.Title</td>
            <td>@m.CategoryName</td>
            <td>@m.IsCompleted</td>
            <td>@m.IsDeleted</td>
            <td>@m.LikesCount</td>
            <td>@m.CommentsCount</td>
            <td class="text-end">
                <a class="btn btn-sm btn-outline-secondary" asp-action="Edit" asp-route-id="@m.Id">Edit</a>
                <form asp-action="Delete" asp-route-id="@m.Id" method="post" class="d-inline">
                    @Html.AntiForgeryToken()
                    <button class="btn btn-sm btn-danger" type="submit">Delete</button>
                </form>
            </td>
        </tr>
    }
    </tbody>
</table>