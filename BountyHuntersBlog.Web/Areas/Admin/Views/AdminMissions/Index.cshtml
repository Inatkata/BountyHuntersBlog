@model IEnumerable<BountyHuntersBlog.Services.DTOs.MissionDto>
@{
    ViewData["Title"] = "Missions";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}

<h2 class="mb-3">Missions</h2>

@if (TempData["Success"] is string s)
{
    <div class="alert alert-success">@s</div>
}
@if (TempData["Error"] is string e)
{
    <div class="alert alert-danger">@e</div>
}

<div class="mb-3">
    <a asp-area="Admin" asp-controller="AdminMissions" asp-action="Create" class="btn btn-primary">Create New</a>
</div>

@if (!Model.Any())
{
    <div class="alert alert-info">No missions yet.</div>
}
else
{
    <table class="table table-striped align-middle">
        <thead>
            <tr>
                <th>Title</th>
                <th>Category</th>
                <th>Tags</th>
                <th style="width:100px;">Completed</th>
                <th style="width:90px;">Deleted</th>
                <th style="width:240px;"></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var m in Model)
            {
                <tr>
                    <td>@m.Title</td>
                    <td>@m.CategoryName</td>
                    <td>
                        @if (m.TagNames != null && m.TagNames.Any())
                        {
                            <span class="text-muted">@string.Join(", ", m.TagNames)</span>
                        }
                    </td>
                    <td>@(m.IsCompleted ? "Yes" : "No")</td>
                    <td>@(m.IsDeleted ? "Yes" : "No")</td>
                    <td class="text-end">
                        <a asp-area="Admin" asp-controller="AdminMissions" asp-action="Details" asp-route-id="@m.Id"
                           class="btn btn-sm btn-outline-secondary">Details</a>
                        <a asp-area="Admin" asp-controller="AdminMissions" asp-action="Edit" asp-route-id="@m.Id"
                           class="btn btn-sm btn-outline-primary">Edit</a>
                        <form asp-area="Admin" asp-controller="AdminMissions" asp-action="Delete" asp-route-id="@m.Id"
                              method="post" class="d-inline">
                            @Html.AntiForgeryToken()
                            <button type="submit" class="btn btn-sm btn-outline-danger"
                                    onclick="return confirm('Delete this mission?');">
                                Delete
                            </button>
                        </form>
                    </td>
                </tr>
            }
        </tbody>
    </table>
}
