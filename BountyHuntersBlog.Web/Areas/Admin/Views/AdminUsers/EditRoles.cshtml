@model BountyHuntersBlog.ViewModels.Admin.Users.AdminUserRolesVM
@{
    ViewData["Title"] = "Edit Roles";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}
<section class="container py-4">
    <h2>Edit Roles</h2>
    <div class="mb-2 text-muted">
        <strong>@Model.UserName</strong> &lt;@Model.Email&gt;
    </div>

    <form asp-action="EditRoles" method="post" class="mt-3">
        <input type="hidden" asp-for="UserId" />
        <input type="hidden" name="AvailableRoles" value="@string.Join(",", Model.AvailableRoles)" />

        <div class="mb-3">
            <label class="form-label">Roles</label>
            <div class="d-flex flex-wrap gap-3">
                @foreach (var r in Model.AvailableRoles)
                {
                    var isChecked = Model.SelectedRoles.Contains(r);
                    <label class="form-check">
                        <input class="form-check-input" type="checkbox" name="SelectedRoles" value="@r" @(isChecked ? "checked" : "") />
                        <span class="form-check-label">@r</span>
                    </label>
                }
            </div>
        </div>

        <button class="btn btn-primary">Save</button>
        <a asp-action="Index" class="btn btn-link">Back</a>
    </form>
</section>