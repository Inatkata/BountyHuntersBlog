@model BountyHuntersBlog.ViewModels.Admin.Users.AdminUserDetailsVM
@{
    ViewData["Title"] = "User Details";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}

<h2>User Details - @Model.UserName</h2>
<hr/>

<dl class="row">
    <dt class="col-sm-2">Display Name</dt>
    <dd class="col-sm-10">@Model.DisplayName</dd>

    <dt class="col-sm-2">Email</dt>
    <dd class="col-sm-10">@Model.Email</dd>

    <dt class="col-sm-2">Roles</dt>
    <dd class="col-sm-10">
        @foreach (var role in Model.Roles) { <span class="badge bg-secondary me-1">@role</span> }
    </dd>

    <dt class="col-sm-2">Locked Out</dt>
    <dd class="col-sm-10">@(Model.IsLockedOut ? "Yes" : "No")</dd>
</dl>

<h4>Missions (@Model.Missions.Count())</h4>
<ul>
    @foreach (var m in Model.Missions) { <li>@m.Title</li> }
</ul>

<h4>Comments (@Model.Comments.Count())</h4>
<ul>
    @foreach (var c in Model.Comments) { <li>@c.Content</li> }
</ul>

<h4>Likes Count</h4>
<p>@Model.LikesCount</p>

<a asp-area="Admin" asp-controller="AdminUsers" asp-action="Index" class="btn btn-secondary">Back to List</a>