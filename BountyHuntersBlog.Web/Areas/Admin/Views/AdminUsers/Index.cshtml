@model IReadOnlyList<BountyHuntersBlog.ViewModels.Admin.Users.AdminUserListItemVM>
@{
    ViewData["Title"] = "Users";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}

<h2 class="mb-3">Users</h2>

<form method="get" class="row mb-3">
    <div class="col-md-4">
        <input type="text" name="search" value="@ViewBag.Search" class="form-control" placeholder="Search users..." />
    </div>
    <div class="col-md-2">
        <button type="submit" class="btn btn-primary w-100">Search</button>
    </div>
</form>

@if (Model == null || !Model.Any())
{
    <div class="alert alert-info">No users found.</div>
}
else
{
    <table class="table table-hover align-middle">
        <thead>
            <tr>
                <th style="width:260px">User</th>
                <th>Roles</th>
                <th class="text-center" style="width:120px">Missions</th>
                <th class="text-center" style="width:120px">Comments</th>
                <th class="text-center" style="width:120px">Likes</th>
                <th class="text-end" style="width:300px">Actions</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var u in Model)
            {
                <tr>
                    <td>
                        <div class="fw-semibold">@(!string.IsNullOrWhiteSpace(u.DisplayName) ? u.DisplayName : u.UserName)</div>
                        <div class="text-muted small">@u.Email</div>
                        @if (u.IsLockedOut)
                        {
                            <span class="badge bg-warning text-dark mt-1">Locked</span>
                        }
                    </td>

                    <td>
                        @if (u.Roles != null && u.Roles.Any())
                        {
                            foreach (var r in u.Roles)
                            {
                                <span class="badge bg-secondary me-1">@r</span>
                            }
                        }
                        else
                        {

                            <span class="text-muted">No roles</span>
                        }

                        <div class="mt-2 d-flex gap-2">
                            <form method="post" class="d-flex gap-2"
                                  asp-area="Admin" asp-controller="AdminUsers" asp-action="AddToRole">
                                @Html.AntiForgeryToken()
                                <input type="hidden" name="id" value="@u.Id" />
                                <input type="text" name="role" class="form-control form-control-sm" placeholder="Role name" />
                                <button type="submit" class="btn btn-sm btn-outline-primary">Add</button>
                            </form>

                            <form method="post" class="d-flex gap-2"
                                  asp-area="Admin" asp-controller="AdminUsers" asp-action="RemoveFromRole">
                                @Html.AntiForgeryToken()
                                <input type="hidden" name="id" value="@u.Id" />
                                <input type="text" name="role" class="form-control form-control-sm" placeholder="Role name" />
                                <button type="submit" class="btn btn-sm btn-outline-danger">Remove</button>
                            </form>
                        </div>
                    </td>

                    <td class="text-center">@u.MissionsCount</td>
                    <td class="text-center">@u.CommentsCount</td>
                    <td class="text-center">@u.LikesCount</td>

                    <td class="text-end">
                        <a class="btn btn-sm btn-outline-info"
                           asp-area="Admin" asp-controller="AdminUsers" asp-action="Details" asp-route-id="@u.Id">
                            Details
                        </a>

                        @if (!u.IsLockedOut)
                        {
                            <form method="post" class="d-inline"
                                  asp-area="Admin" asp-controller="AdminUsers" asp-action="Lock">
                                @Html.AntiForgeryToken()
                                <input type="hidden" name="id" value="@u.Id" />
                                <input type="hidden" name="days" value="7" />
                                <button type="submit" class="btn btn-sm btn-outline-warning"
                                        onclick="return confirm('Lock this user for 7 days?');">
                                    Lock
                                </button>
                            </form>
                        }
                        else
                        {
                            <form method="post" class="d-inline"
                                  asp-area="Admin" asp-controller="AdminUsers" asp-action="Unlock">
                                @Html.AntiForgeryToken()
                                <input type="hidden" name="id" value="@u.Id" />
                                <button type="submit" class="btn btn-sm btn-outline-success">Unlock</button>
                            </form>
                        }
                    </td>
                </tr>
            }
        </tbody>
    </table>

    <nav>
        <ul class="pagination">
            @{
                int totalPages = (int)Math.Ceiling((decimal)ViewBag.TotalCount / (int)ViewBag.PageSize);
                for (int i = 1; i <= totalPages; i++)
                {
                    <li class="page-item @(i == ViewBag.Page ? "active" : "")">
                        <a class="page-link" href="?search=@ViewBag.Search&page=@i&pageSize=@ViewBag.PageSize">@i</a>
                    </li>
                }
            }
        </ul>
    </nav>
}
