@using Microsoft.AspNetCore.Mvc.TagHelpers
@using Microsoft.AspNetCore.Http
@inject IHttpContextAccessor HttpContextAccessor
@model IEnumerable<BountyHuntersBlog.ViewModels.Admin.Users.AdminUserListItemVM>

@{
    ViewData["Title"] = "Users";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
    var searchValue = HttpContextAccessor.HttpContext?.Request.Query["search"].ToString() ?? string.Empty;
}

<h2 class="mb-3">Users</h2>

<form method="get" class="mb-3">
    <div class="input-group">
        <input type="text" name="search" value="@searchValue" class="form-control" placeholder="Search by username, email, display name..." />
        <button class="btn btn-primary" type="submit">Search</button>
    </div>
</form>

@if (!Model.Any())
{
    <div class="alert alert-info">No users found.</div>
}
else
{
    <table class="table table-striped align-middle">
        <thead>
            <tr>
                <th>UserName</th>
                <th>Email</th>
                <th>Display Name</th>
                <th style="width:200px;"></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var u in Model)
            {
                <tr>
                    <td>@u.UserName</td>
                    <td>@u.Email</td>
                    <td>@u.DisplayName</td>
                    <td class="text-end">
                        <a asp-area="Admin" asp-controller="AdminUsers" asp-action="Details" asp-route-id="@u.Id"
                           class="btn btn-sm btn-outline-primary">Details</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
}

<div class="mt-3">
    <nav>
        <ul class="pagination">
            @{
                int totalPages = (int)Math.Ceiling((double)ViewBag.TotalCount / (int)ViewBag.PageSize);
                int currentPage = (int)ViewBag.Page;
            }
            @for (int i = 1; i <= totalPages; i++)
            {
                <li class="page-item @(i == currentPage ? "active" : "")">
                    <a class="page-link" href="?page=@i&search=@searchValue">@i</a>
                </li>
            }
        </ul>
    </nav>
</div>
