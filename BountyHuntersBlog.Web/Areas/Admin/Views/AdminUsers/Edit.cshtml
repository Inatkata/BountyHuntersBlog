@model BountyHuntersBlog.ViewModels.Admin.Users.AdminUserListItemVM

@{
    ViewData["Title"] = "Edit User";
}
<partial name="~/Areas/Admin/Views/Shared/_BackToIndex.cshtml" />
<form method="post">
    <input type="hidden" name="Id" value="@(Model?.Id)" />
    <div class="mb-3">
        <label class="form-label">Username</label>
        <input name="Username" class="form-control" value="@(Model?.Username ?? Model?.UserName)" />
    </div>
    <div class="mb-3">
        <label class="form-label">Email</label>
        <input name="Email" class="form-control" type="email" value="@(Model?.Email)" />
    </div>
    <div class="mb-3">
        <label class="form-label">Role</label>
        <input name="Role" class="form-control" value="@(string.Join(", ", Model?.Roles ?? new List<string>()))" />
    </div>
    <button class="btn btn-primary" type="submit">Save</button>
</form>
